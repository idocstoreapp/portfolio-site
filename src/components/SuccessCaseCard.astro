---
export interface Props {
  icon: string;
  title: string;
  problem: string;
  solution: string;
  result: string;
  gradient?: 'primary' | 'secondary' | 'tertiary';
}

const {
  icon,
  title,
  problem,
  solution,
  result,
  gradient = 'primary'
} = Astro.props;

const gradientClasses = {
  primary: 'gradient-primary',
  secondary: 'gradient-secondary',
  tertiary: 'gradient-tertiary'
};
---

<article class={`success-case-card ${gradientClasses[gradient]}`}>
  <div class="case-icon">
    <span>{icon}</span>
  </div>
  
  <h3 class="case-title">{title}</h3>
  
  <div class="case-content">
    <div class="case-item">
      <span class="case-label">Problema</span>
      <p class="case-text">{problem}</p>
    </div>
    
    <div class="case-divider"></div>
    
    <div class="case-item">
      <span class="case-label">Soluci√≥n</span>
      <p class="case-text">{solution}</p>
    </div>
    
    <div class="case-divider"></div>
    
    <div class="case-item case-result">
      <span class="case-label">Resultado</span>
      <p class="case-text">{result}</p>
    </div>
  </div>
</article>

<style>
  .success-case-card {
    background: linear-gradient(135deg, #FFFFFF 0%, #F8F9FA 100%);
    border: 2px solid rgba(59, 130, 246, 0.1);
    border-radius: 20px;
    padding: 2.5rem;
    position: relative;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .success-case-card::before {
    content: '';
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity var(--norm) var(--ease);
    pointer-events: none;
  }
  
  .success-case-card:hover {
    transform: translateY(-6px);
    border-color: rgba(59, 130, 246, 0.3);
    box-shadow: 0 12px 40px rgba(59, 130, 246, 0.15);
  }
  
  .gradient-primary::before {
    background: linear-gradient(135deg, rgba(88, 101, 242, 0.05), rgba(108, 71, 255, 0.05));
  }
  
  .gradient-secondary::before {
    background: linear-gradient(135deg, rgba(108, 71, 255, 0.05), rgba(59, 130, 246, 0.05));
  }
  
  .gradient-tertiary::before {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.05), rgba(88, 101, 242, 0.05));
  }
  
  .success-case-card:hover::before {
    opacity: 1;
  }
  
  .case-icon {
    width: 4rem;
    height: 4rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(88, 101, 242, 0.1));
    border: 2px solid rgba(59, 130, 246, 0.2);
    border-radius: 16px;
    margin-bottom: 1.5rem;
    font-size: 2rem;
    transition: all 0.3s ease;
  }
  
  .success-case-card:hover .case-icon {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.15), rgba(88, 101, 242, 0.15));
    border-color: rgba(59, 130, 246, 0.4);
    transform: scale(1.05);
  }
  
  .case-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-graphite-dark, #2B2B2B);
    margin: 0 0 1.5rem 0;
    line-height: 1.3;
  }
  
  .case-content {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }
  
  .case-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .case-label {
    font-size: 0.75rem;
    color: rgba(59, 130, 246, 0.8);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }
  
  .case-text {
    font-size: 1rem;
    color: var(--color-graphite-dark, #2B2B2B);
    line-height: 1.7;
    margin: 0;
  }
  
  .case-result .case-text {
    color: rgba(59, 130, 246, 1);
    font-weight: 600;
    font-size: 1.125rem;
  }
  
  .case-divider {
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(59, 130, 246, 0.2),
      transparent
    );
    margin: 0.75rem 0;
  }
  
  /* Mobile responsive */
  @media (max-width: 768px) {
    .success-case-card {
      padding: 2rem;
    }
    
    .case-icon {
      width: 3.5rem;
      height: 3.5rem;
      font-size: 1.75rem;
    }
    
    .case-title {
      font-size: 1.25rem;
    }
  }
</style>

