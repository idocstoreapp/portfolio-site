---
interface Props {
  projects: Array<{
    title: string;
    image: string;
    problem: string;
    solution: string;
    result: string;
    link: string;
  }>;
}

const { projects } = Astro.props;
---

<section class="related-projects-section">
  <div class="related-projects-container">
    <div class="related-projects-header">
      <h2 class="related-projects-title">Casos de éxito</h2>
      <p class="related-projects-subtitle">Proyectos reales donde implementamos esta solución</p>
    </div>
    <div class="related-projects-grid">
      {projects.map((project) => (
        <a href={project.link} class="related-project-card">
          <div class="project-image">
            <img src={project.image} alt={project.title} loading="lazy" />
          </div>
          <div class="project-content">
            <h3 class="project-title">{project.title}</h3>
            <div class="project-context">
              <div class="context-item">
                <span class="context-label">Problema:</span>
                <span class="context-value">{project.problem}</span>
              </div>
              <div class="context-item">
                <span class="context-label">Solución:</span>
                <span class="context-value">{project.solution}</span>
              </div>
              <div class="context-item highlight">
                <span class="context-label">Resultado:</span>
                <span class="context-value">{project.result}</span>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .related-projects-section {
    padding: 4rem 1rem;
    background: var(--color-elephant-white, #F6F5F2);
  }

  .related-projects-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .related-projects-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .related-projects-title {
    font-family: 'Libre Baskerville', serif;
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 700;
    color: var(--color-graphite-dark, #2B2B2B);
    margin-bottom: 1rem;
  }

  .related-projects-subtitle {
    font-size: 1.125rem;
    color: var(--color-grey-medium, #9A9A97);
  }

  .related-projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .related-project-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: block;
  }

  .related-project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .project-image {
    width: 100%;
    height: 250px;
    overflow: hidden;
    background: var(--color-grey-light, #E5E5E3);
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .project-content {
    padding: 2rem;
  }

  .project-title {
    font-family: 'Libre Baskerville', serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-graphite-dark, #2B2B2B);
    margin-bottom: 1.5rem;
  }

  .project-context {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .context-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .context-item.highlight {
    padding-top: 1rem;
    border-top: 2px solid var(--color-grey-light, #E5E5E3);
  }

  .context-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-grey-medium, #9A9A97);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .context-value {
    font-size: 1rem;
    color: var(--color-graphite-dark, #2B2B2B);
    line-height: 1.5;
  }

  .context-item.highlight .context-value {
    font-weight: 600;
    color: var(--color-graphite-dark, #2B2B2B);
  }

  @media (max-width: 768px) {
    .related-projects-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>


