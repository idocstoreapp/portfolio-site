---
export interface Props {
  title?: string;
  subtitle?: string;
  primaryCta?: { text: string; href: string };
  secondaryCta?: { text: string; href: string };
  rating?: { score: string; count: string };
  mockupImage?: string;
}

const {
  title = "Desarrollo Web, Apps y Automatizaciones Profesionales",
  subtitle = "Soluciones reales para empresas, con resultados medibles.",
  primaryCta = { text: "Ver Portafolio", href: "/projects" },
  secondaryCta = { text: "Solicitar Diagnóstico", href: "/contacto" },
  rating = { score: "4.9/5.0", count: "250+ Reseñas en Google" },
  mockupImage
} = Astro.props;
---

<section class="hero-premium">
  <!-- Background Effects -->
  <div class="hero-background">
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
    <div class="gradient-orb orb-3"></div>
  </div>
  
  <!-- Content Container -->
  <div class="hero-container">
    <div class="hero-content">
      <!-- Mockup Image -->
      <div class="hero-mockup">
        <div class="hero-mockup-mobile">
        <img 
          src="/images/mockup-hero.png" 
          alt="Mockup de aplicación móvil"
          class="mockup-image"
          loading="eager"
        />
        </div>
        <div class="hero-mockup-desktop">
          <img 
            src="/images/webs/mockup-escritorio.png" 
            alt="Sistema de gestión"
            class="mockup-desktop-image"
            loading="lazy"
          />
        </div>
        <div class="hero-systems-banner">
          <div class="systems-slider">
            <div class="system-slide active">Sistemas para servicios técnicos de celulares</div>
            <div class="system-slide">Sistemas para talleres</div>
            <div class="system-slide">Cotizadores para fabricantes</div>
            <div class="system-slide">Manejo de ingresos y egresos internos</div>
            <div class="system-slide">Gestión de empleados</div>
            <div class="system-slide">Manejo de stock y proveedores</div>
          </div>
        </div>
      </div>
      
      <!-- Text Content -->
      <div class="hero-text">
        <h1 class="hero-title">
          Plataformas digitales que convierten crecimiento en resultados reales
        </h1>
        
        <!-- Subtítulo sin card azul -->
        <p class="hero-subtitle">
          Diseñamos sistemas web que optimizan procesos y generan ventas.
        </p>
        
        <!-- CTA Buttons con efecto neón -->
        <div class="hero-cta-primary">
          <a href={primaryCta.href} class="btn-neon btn-neon-blue">
            <span class="btn-text">{primaryCta.text}</span>
            <span class="btn-glow btn-glow-blue"></span>
            <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a href={secondaryCta.href} class="btn-neon btn-neon-orange">
            <span class="btn-text">{secondaryCta.text}</span>
            <span class="btn-glow btn-glow-orange"></span>
          </a>
        </div>
        
        <!-- Logos Carousel (Solo móvil) -->
        <div class="hero-logos-carousel-mobile">
          <h3 class="logos-title">Confían en nosotros</h3>
          <div class="logos-track" id="logos-track">
            <div class="logo-item">
              <img src="/images/projects/logo-gourmetarabe.png" alt="Gourmet Árabe" />
            </div>
            <div class="logo-item">
              <img src="/images/projects/logo-idocstore.png" alt="IDoc Store" />
            </div>
            <div class="logo-item">
              <img src="/images/projects/logo-kubica.png" alt="Kubica" />
            </div>
            <div class="logo-item">
              <img src="/images/projects/logo-mimoto.png" alt="Mimoto" />
            </div>
            <div class="logo-item">
              <img src="/images/projects/logo-muebleriacadablanca.png" alt="Mueblería Casa Blanca" />
            </div>
            <!-- Duplicar logos para efecto infinito -->
            <div class="logo-item">
              <img src="/images/projects/logo-gourmetarabe.png" alt="Gourmet Árabe" />
            </div>
            <div class="logo-item">
              <img src="/images/projects/logo-idocstore.png" alt="IDoc Store" />
            </div>
            <div class="logo-item">
              <img src="/images/projects/logo-kubica.png" alt="Kubica" />
            </div>
            <div class="logo-item">
              <img src="/images/projects/logo-mimoto.png" alt="Mimoto" />
            </div>
            <div class="logo-item">
              <img src="/images/projects/logo-muebleriacadablanca.png" alt="Mueblería Casa Blanca" />
            </div>
          </div>
        </div>
        
        <!-- Rating -->
        <div class="hero-rating">
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="rating-score">{rating.score}</span>
          <span class="rating-separator">•</span>
          <span class="rating-count">{rating.count}</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Override header transparente solo cuando está sobre el hero */
  :global(.header-premium) {
    transition: background 0.3s ease, backdrop-filter 0.3s ease;
  }
  
  /* Cuando el hero está visible, hacer header más transparente */
  .hero-premium:has(+ *) ~ :global(.header-premium),
  body:has(.hero-premium:first-child) :global(.header-premium) {
    background: rgba(255, 255, 255, 0.7) !important;
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }
  
  /* Asegurar legibilidad de links en header transparente */
  body:has(.hero-premium:first-child) :global(.header-premium) :global(.nav-link),
  body:has(.hero-premium:first-child) :global(.header-premium) :global(.mobile-nav-link) {
    color: var(--color-graphite-dark) !important;
  }
  
  .hero-premium {
    position: relative;
    min-height: 100svh; /* Usar svh para mejor control del viewport */
    display: flex;
    align-items: flex-start; /* Cambiar de center a flex-start para mejor control */
    padding: 0;
    padding-top: 0; /* El scroll-margin-top del header manejará el espacio */
    padding-bottom: 0;
    margin-bottom: 0;
    overflow-x: hidden; /* Solo ocultar overflow horizontal */
    background: var(--bg-primary);
    background-color: var(--color-elephant-white);
    background-image: url("/images/background-hero.jpg");
    background-size: cover;
    background-position: center top;
    background-repeat: no-repeat;
    background-attachment: fixed;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    scroll-margin-top: 5rem; /* Espacio para header sticky */
  }
  
  /* Mobile: altura automática, se adapta al contenido */
  @media (min-width: 320px) and (max-width: 1023px) {
    .hero-premium {
      min-height: auto;
      align-items: flex-start;
      padding: 0 !important;
      margin: 0 !important;
      overflow: visible;
      overflow-x: hidden !important;
      width: 100% !important;
      max-width: 100vw !important;
      box-sizing: border-box;
    }
  }
  
  /* Desktop: altura completa del viewport */
  @media (min-width: 1024px) {
    .hero-premium {
      min-height: 100svh;
      height: 100svh; /* Altura fija del viewport */
      padding: 0rem;
      align-items: flex-start;
      overflow: visible; /* Permitir que se vea todo el contenido */
      box-sizing: border-box;
    }
  }
  
  .hero-background {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: 0;
    background-image: url("/images/background-hero.jpg");
    background-size: cover;
    background-position: center top; /* Mover background más arriba */
    background-repeat: no-repeat;
    /* Filtros CSS para hacer el fondo más claro y luminoso */
    filter: brightness(1.15) contrast(0.95);
  }
  
  .hero-background::before {
    content: '';
    position: absolute;
    inset: 0;
    /* Overlay blanco translúcido para mayor claridad */
    background: rgba(255, 255, 255, 0.25);
    z-index: 1;
    mix-blend-mode: overlay;
  }
  
  .gradient-orb {
    display: none; /* Eliminar efectos de orbes para look más limpio y empresarial */
  }
  
  .orb-1,
  .orb-2,
  .orb-3 {
    display: none;
  }
  
  @keyframes float-orb {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(50px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-30px, 30px) scale(0.9);
    }
  }
  
  .hero-container {
    position: relative;
    z-index: 1;
    max-width: 100%;
    margin: 0;
    width: 100%;
    padding: 0;
    height: auto;
    min-height: 0;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    overflow: visible;
  }
  
  @media (min-width: 320px) and (max-width: 1023px) {
    .hero-container {
      padding: 0 !important;
      padding-bottom: 0 !important;
      margin-bottom: 0 !important;
      height: auto;
      min-height: auto;
      align-items: flex-end;
      padding-top: 0;
      width: 100vw !important;
      max-width: 100vw !important;
      box-sizing: border-box;
      overflow-x: hidden !important;
    }
  }
  
  @media (min-width: 1024px) {
    .hero-container {
      align-items: flex-start;
      padding-top: 5rem; /* Espacio para header sticky (aprox 5rem) */
      display: flex;
      flex-direction: column;
      height: calc(100% - 5rem); /* Altura disponible menos espacio del header */
      min-height: 0;
      box-sizing: border-box;
    }
  }
  
  .hero-content {
    display: grid;
    grid-template-columns: 1fr auto;
    grid-template-rows: auto auto; /* Cambiar de auto 1fr a auto auto para evitar espacios fantasmas */
    gap: 1rem; /* Restaurar gap para espaciado natural */
    align-items: start;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    min-height: 0;
    overflow: visible;
  }

    .hero-text {
      max-width: 100%;
      width: 100%;
      margin: 0;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      justify-content: space-evenly; /* Cambiar de space-evenly a flex-start */
      gap: 1rem; /* Usar gap para espaciado consistente */
      min-height: 0;
      overflow: visible;
      /* Remover height: 100% para permitir expansión natural */
    }
    
    /* Estilos para hero-title cuando NO está en hero-text (grid layout) */
    .hero-content > .hero-title {
      grid-column: 2;
      grid-row: 1;
      margin-bottom: 0;
      margin-top: 0;
      margin-left: 0;
      margin-right: 0;
      padding-left: 0;
      padding-right: 0;
      padding-top: 0;
      align-self: start;
      text-align: right;
      font-size: clamp(0.3rem, 1vw, 0.5rem);
      line-height: 0.9;
      max-width: 100%;
      width: 100%;
      overflow: visible;
      display: block;
      box-sizing: border-box;
      position: relative;
      z-index: 10;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
  
  /* Mobile: Reordenamiento vertical optimizado para conversión */
  @media (min-width: 320px) and (max-width: 1023px) {

    .hero-container {
      margin: 0 !important;
      padding: 0 !important;
      padding-bottom: 0;
      width: 100% !important;
      max-width: 100vw !important;
      box-sizing: border-box;
      overflow-x: hidden !important;
    }
    
    /* Layout de columna única para mobile */
    .hero-content {
      display: grid;
      grid-template-columns: 1fr;
      grid-template-areas: 
        "title"
        "subtitle"
        "mockup"
        "ctas"
        "logos"
        "rating";
      gap: 0.5rem 0; /* Reducir gap para que todo quepa en el viewport */
      align-items: center;
      justify-items: center;
      width: 100%;
      max-width: 100%;
      height: auto;
      min-height: auto;
      box-sizing: border-box;
      padding: 0 0.5rem !important; /* Reducir aún más el padding horizontal */
      padding-bottom: 1rem !important;
      margin: 0 !important;
      margin-left: 0 !important;
      margin-right: 0 !important;
      overflow-x: hidden !important;
    }
    
    /* Asignar áreas del grid */
    .hero-title {
      grid-area: title;
      text-align: center !important; /* Centrado para mejor jerarquía */
      margin: 0 !important;
      padding: 1rem 0.5rem 0.5rem 0.5rem !important; /* Reducir padding para que no se salga */
      width: 100% !important;
      max-width: 100% !important;
      font-family: 'Libre Baskerville', serif !important; /* Fuente serif elegante */
    }
    
    /* Subtítulo: Segundo en el orden visual */
    .hero-subtitle {
      grid-area: subtitle;
      width: 100%;
      max-width: 100%;
      margin: 0;
      margin-top: -0.5rem !important; /* Más cerca del título */
      padding: 0 0.25rem !important; /* Reducir padding para que no se salga */
      text-align: center;
      font-size: clamp(1rem, 3vw, 1.25rem);
      color: #1a1a1a !important; /* Gris más oscuro */
      line-height: 1.5;
      font-weight: 500;
      font-style: italic !important; /* Cursiva */
      box-sizing: border-box;
    }
    
    /* Mockup alineado a la derecha */
    .hero-mockup {
      grid-area: mockup;
      display: flex;
      align-items: center;
      justify-content: center !important; /* Centrar en lugar de flex-end */
      width: 100% !important;
      max-width: 100% !important;
      margin: 0 !important;
      padding: 0 !important;
      z-index: 1;
      position: relative;
      box-sizing: border-box;
    }
    
    .hero-mockup .mockup-image {
      width: 100% !important;
      max-width: 290px !important; /* Mockup más pequeño */
      max-height: 45vh !important; /* Máximo 35vh de altura */
      height: auto !important;
      object-fit: contain;
      display: block;
      margin: 0 auto !important; /* Centrar la imagen */
      filter: drop-shadow(-30px 20px 30px rgba(0, 0, 0, 0.7)) !important; /* Sombra solo en la imagen PNG */
    }
    
    /* CTAs: Apilados verticalmente, siempre visibles */
    .hero-cta-primary {
      grid-area: ctas;
      width: 100%;
      max-width: 100%;
      margin: 0;
      padding: 0 0.25rem !important; /* Reducir aún más el padding */
      display: flex;
      flex-direction: column;
      gap: 2rem;
      align-items: center;
      box-sizing: border-box;
      justify-content: center;
      box-sizing: border-box;
      position: relative;
      z-index: 10;
    }
    
    /* En móvil: botón primario (grande) arriba, secundario (pequeño) abajo */
    .btn-neon-blue {
      order: 1; /* Primero (arriba) */
    }
    
    .btn-neon-orange {
      order: 2; /* Segundo (abajo) */
      margin-top: 1rem !important; /* Espacio adicional para que esté claramente en la siguiente línea */
    }
    
    .btn-neon {
      position: relative;
      z-index: 11;
    }
    
    /* Carrusel de logos (solo móvil) */
    .hero-logos-carousel-mobile {
      grid-area: logos;
      width: 100% !important;
      max-width: 100% !important;
      margin: 0 !important;
      margin-top: 0 !important; /* Sin margen superior, el gap del grid lo maneja */
      padding: 0.5rem 0.25rem !important; /* Reducir padding para que no se salga */
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      box-sizing: border-box;
      overflow: hidden !important; /* Ocultar cualquier desbordamiento */
      /* Forzar que el contenedor no se expanda más allá del viewport */
      min-width: 0;
      position: relative;
    }
    
    .logos-title {
      font-size: 0.7rem !important;
      color: var(--color-grey-medium) !important;
      font-weight: 500;
      margin: 0;
      text-align: center;
      font-family: 'Inter', sans-serif !important;
    }
    
    .logos-track {
      display: flex;
      align-items: center;
      gap: 1.5rem;
      overflow: hidden !important;
      width: 100% !important;
      max-width: 100% !important;
      position: relative;
      will-change: transform;
      box-sizing: border-box;
      margin: 0 !important;
      padding: 0 !important;
      /* Forzar que el track no expanda el contenedor padre */
      min-width: 0;
      flex-shrink: 1;
    }
    
    .logo-item {
      flex-shrink: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 35px;
      width: auto;
      max-width: 70px; /* Limitar ancho máximo de cada logo */
      box-sizing: border-box;
    }
    
    .logo-item img {
      height: 100%;
      width: auto;
      max-width: 70px;
      object-fit: contain;
      filter: grayscale(100%) opacity(0.6);
      transition: filter 0.3s ease;
    }
    
    .logo-item img:hover {
      filter: grayscale(0%) opacity(1);
    }
    
    /* Ajustes específicos para pantallas pequeñas (360px) */
    @media (max-width: 360px) {
      /* Mockup más pequeño */
      .hero-mockup .mockup-image {
        max-width: 220px !important;
        max-height: 35vh !important;
      }
      
      /* CTAs más pequeños */
      .hero-cta-primary {
        gap: 1.5rem !important;
      }
      
      .btn-neon-blue {
        padding: 0.6rem 1.2rem !important;
        font-size: 0.875rem !important;
      }
      
      .btn-neon-orange {
        padding: 0.5rem 1rem !important;
        font-size: 0.8rem !important;
      }
      
      /* Carrusel más pequeño y más arriba */
      .hero-logos-carousel-mobile {
        margin-top: 0.5rem !important;
        padding: 0.3rem 0.25rem !important;
        gap: 0.3rem !important; /* Menos espacio entre título y carrusel */
      }
      
      .logos-title {
        font-size: 0.65rem !important;
        margin-bottom: 0.2rem !important;
      }
      
      .logo-item {
        height: 28px !important;
      }
      
      .logo-item img {
        max-width: 55px !important;
      }
      
      .logos-track {
        gap: 1rem !important;
      }
      
      /* Reseñas más pequeñas */
      .hero-rating {
        font-size: 0.75rem !important;
      }
      
      .hero-rating .star {
        font-size: 0.75rem !important;
      }
    }
    
    /* Ocultar carrusel de logos en desktop */
    @media (min-width: 1024px) {
      .hero-logos-carousel-mobile {
        display: none !important;
      }
    }
    
    .hero-rating {
      grid-area: rating;
      width: 100% !important;
      max-width: 100% !important;
      margin: 0 !important;
      padding: 0 0.25rem !important; /* Reducir padding para que no se salga */
      display: flex;
      justify-content: center;
      align-items: center;
      box-sizing: border-box;
    }
    
    /* Título: Primero en el orden visual */
    .hero-title {
      grid-area: title;
      text-align: center;
      margin: 0;
      padding: 0 0.5rem;
      font-size: clamp(1.75rem, 6vw, 2.5rem);
      line-height: 1.2;
      max-width: 100%;
      width: 100%;
      overflow: visible;
      font-family: 'Libre Baskerville', serif; /* Fuente serif elegante */
      display: block;
      box-sizing: border-box;
      position: relative;
      z-index: 10;
      word-wrap: break-word;
      overflow-wrap: break-word;
      color: var(--text-primary);
    }
    
    /* Ajustar alineación de líneas del título para layout centrado */
    .title-line {
      display: block;
      text-align: center !important; /* Centrado para nuevo layout vertical */
      margin-right: 0 !important;
      padding-right: 0 !important;
      line-height: 1.3 !important; /* Mejor espaciado para legibilidad */
      margin-bottom: 0.25rem !important;
      margin-top: 0 !important;
      width: 100% !important;
      max-width: 100% !important;
      direction: ltr;
      word-wrap: break-word;
      overflow-wrap: break-word;
      white-space: normal;
      box-sizing: border-box;
    }
    
    .title-align-right {
      display: block;
      text-align: right;
      padding-right: 0;
      width: 100%;
      box-sizing: border-box;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
    
    .title-align-left {
      display: block;
      text-align: right;
      padding-right: 0;
      width: 100%;
      box-sizing: border-box;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
    
    /* Línea con "para hacer tu" y "EMPRESA" - usar flex para alinear */
    .title-line:has(.title-align-right) {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      text-align: right !important;
    }
    
    .title-line:has(.title-align-right) .title-align-right {
      flex-shrink: 0;
      text-align: right;
    }
    
    .title-line:has(.title-align-right) .title-align-left {
      flex-shrink: 0;
      text-align: left;
      margin-left: auto;
      margin-right: 0;
    }
    
    /* Líneas compactas - "más EFICIENTE" a la derecha */
    .title-line-compact:has(.title-align-right) {
      text-align: right !important;
    }
    
    .title-line-compact:has(.title-align-right) .title-align-right {
      display: inline-block;
      text-align: right;
    }
    
    /* "y" y "RENTABLE" deben estar alineados a la derecha como "más EFICIENTE" */
    .title-line-compact:has(.title-align-right) ~ .title-line-compact {
      text-align: right !important;
      padding-left: 0;
      margin-left: 0;
    }
    
    .title-line-compact:has(.title-align-right) ~ .title-line-compact .title-align-left,
    .title-line-compact:has(.title-align-right) ~ .title-line-compact .title-align-right {
      text-align: right;
      margin-left: 0;
      padding-left: 0;
      display: inline-block;
    }
    
    /* Calcular el padding-left necesario para alinear con "más EFICIENTE" */
    /* El padding debe ser: ancho del contenedor - ancho del texto "más EFICIENTE" */
    .title-line-compact:has(.title-align-right) {
      position: relative;
    }
    
    .title-line-compact:has(.title-align-right) ~ .title-line-compact {
      padding-left: calc(100% - 100%);
    }
    
    .title-line-compact {
      margin-bottom: 0 !important;
      margin-top: 0 !important;
      line-height: 0.75 !important;
      text-align: left !important;
    }
    
    /* Línea con "para" y "EMPRESA" - alinear a la izquierda */
    .title-line:has(.title-align-left) {
      text-align: left !important;
    }
    
    .title-accent {
      color: var(--accent-orange);
