---
export interface Props {
  title?: string;
  subtitle?: string;
  primaryCta?: { text: string; href: string };
  secondaryCta?: { text: string; href: string };
  rating?: { score: string; count: string };
  mockupImage?: string;
}

const {
  title = "Desarrollo Web, Apps y Automatizaciones Profesionales",
  subtitle = "Soluciones reales para empresas, con resultados medibles.",
  primaryCta = { text: "Ver Portafolio", href: "/projects" },
  secondaryCta = { text: "Solicitar Servicio", href: "/contacto" },
  rating = { score: "4.9/5.0", count: "250+ Reseñas en Google" },
  mockupImage
} = Astro.props;
---

<section class="hero-premium">
  <!-- Background Effects -->
  <div class="hero-background">
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
    <div class="gradient-orb orb-3"></div>
  </div>
  
  <!-- Content Container -->
  <div class="hero-container">
    <div class="hero-content">
      <!-- Mockup Image -->
      <div class="hero-mockup">
        <img 
          src="/images/mockup-hero.png" 
          alt="Mockup de aplicación móvil"
          class="mockup-image"
          loading="eager"
        />
      </div>
      
      <!-- Text Content -->
      <div class="hero-text">
        <h1 class="hero-title">
          <span class="title-line">Desarrollo Web</span>
          <span class="title-line">Apps y</span>
          <span class="title-line"><span class="title-accent">Automatizaciones</span></span>
        </h1>
        
        <p class="hero-subtitle">
          <span class="subtitle-line">Soluciones reales</span>
          <span class="subtitle-line">para empresas,</span>
          <span class="subtitle-line">con resultados medibles.</span>
        </p>
        
        <!-- CTA Buttons -->
        <div class="hero-cta-primary">
          <a href={primaryCta.href} class="btn-primary-small">
            {primaryCta.text}
            <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a href={secondaryCta.href} class="btn-secondary-small">
            {secondaryCta.text}
          </a>
        </div>
        
        <!-- Rating -->
        <div class="hero-rating">
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="rating-score">{rating.score}</span>
          <span class="rating-separator">•</span>
          <span class="rating-count">{rating.count}</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-premium {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    padding: 4rem 1rem;
    overflow: hidden;
    background: var(--bg-primary);
  }
  
  /* Mobile: altura automática, máximo 50vh */
  @media (min-width: 320px) and (max-width: 1023px) {
    .hero-premium {
      height: auto;
      min-height: auto;
      max-height: 50vh;
      align-items: flex-start;
      padding: 0.5rem 1rem 1rem;
      padding-top: 5rem;
      overflow: visible;
    }
  }
  
  @media (min-width: 1024px) {
    .hero-premium {
      height: 100vh;
      padding: 1rem 1rem;
      align-items: flex-start;
      padding-top: 0.5rem;
    }
  }
  
  .hero-background {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: 0;
  }
  
  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
    animation: float-orb 20s ease-in-out infinite;
  }
  
  .orb-1 {
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, var(--accent-primary), transparent);
    top: -300px;
    left: -300px;
    animation-delay: 0s;
  }
  
  .orb-2 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, var(--accent-secondary), transparent);
    bottom: -250px;
    right: -250px;
    animation-delay: 5s;
  }
  
  .orb-3 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, var(--accent-tertiary), transparent);
    top: 50%;
    right: 10%;
    animation-delay: 10s;
  }
  
  @keyframes float-orb {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(50px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-30px, 30px) scale(0.9);
    }
  }
  
  .hero-container {
    position: relative;
    z-index: 1;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
    padding: 0 1rem;
    height: 100%;
    display: flex;
    align-items: center;
  }
  
  @media (min-width: 320px) and (max-width: 1023px) {
    .hero-container {
      padding: 0 0.5rem 0 0;
      height: auto;
      align-items: flex-start;
      padding-top: 0;
    }
  }
  
  @media (min-width: 1024px) {
    .hero-container {
      align-items: flex-start;
      padding-top: 1rem;
    }
  }
  
  .hero-content {
    display: grid;
    grid-template-columns: 1fr auto;
    grid-template-rows: auto 1fr;
    gap: 1rem 1rem;
    align-items: start;
  }
  
  /* Mobile: Mockup a la izquierda, título a la derecha (desde 320px) */
  @media (min-width: 320px) and (max-width: 1023px) {
    .hero-content {
      display: grid;
      grid-template-columns: auto 1fr;
      grid-template-rows: auto 1fr;
      gap: 0.75rem 0;
      align-items: start;
    }
    
    .hero-mockup {
      grid-column: 1;
      grid-row: 1;
      display: flex;
      align-items: flex-start;
      justify-content: flex-start;
      flex-shrink: 0;
      margin-top: 0;
      min-width: fit-content;
      padding-right: 0.75rem;
    }
    
    .hero-title {
      grid-column: 2;
      grid-row: 1;
      margin-bottom: 0;
      margin-top: 0;
      margin-left: -1rem !important;
      margin-right: 0;
      padding-left: 0;
      padding-right: 0.5rem;
      padding-top: 0;
      align-self: start;
      text-align: right !important;
      font-size: clamp(1.5rem, 6vw, 2rem);
      line-height: 1.8;
      max-width: none;
      width: 100%;
      overflow: visible;
      display: block;
    }
    
    .title-line {
      display: block;
      text-align: right !important;
      margin-right: 0;
      padding-right: 0;
      line-height: 1.8;
      margin-bottom: 0.6rem;
      width: 100%;
      direction: ltr;
    }
    
    .title-accent {
      color: var(--accent-primary);
    }
    
    .hero-subtitle {
      grid-column: 1 / -1;
      grid-row: 2;
      margin-top: -1rem;
      margin-bottom: 0;
      margin-left: 3rem !important;
      margin-right: 0;
      padding-left: 0.5rem;
      padding-right: 0.5rem;
      text-align: left !important;
      font-size: clamp(0.7rem, 2.5vw, 0.9rem);
      line-height: 1.4;
      max-width: 100% !important;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      position: relative;
      left: 0 !important;
    }
    
    .subtitle-line {
      display: block;
      text-align: right;
      margin-bottom: 0.25rem;
    }
    
    .hero-cta-primary {
      grid-column: 1 / -1;
      grid-row: 3;
      margin-top: -0.5rem;
      margin-bottom: 0;
      margin-left: -5rem !important;
      padding-left: 0.5rem;
      padding-right: 0.5rem;
      display: flex;
      justify-content: flex-start;
      gap: 0.5rem;
      flex-wrap: nowrap;
      align-items: center;
    }
    
    .btn-primary-small {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.4rem;
      padding: 0.6rem 0.9rem;
      border-radius: var(--radius-md);
      font-weight: 600;
      font-size: 0.75rem;
      text-decoration: none;
      transition: all var(--norm) var(--ease);
      background: var(--grad-primary);
      color: #FFFFFF;
      box-shadow: var(--shadow-lg), var(--shadow-glow-primary);
      white-space: nowrap;
      flex-shrink: 1;
      min-width: fit-content;
    }
    
    .btn-primary-small:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-xl), var(--shadow-glow-primary);
    }
    
    .hero-rating {
      grid-column: 1 / -1;
      grid-row: 4;
      margin-top: -0.5rem;
      margin-bottom: 0.5rem;
      margin-left: -12rem !important;
      padding-left: 0.5rem !important;
      padding-right: 0.5rem;
      display: flex !important;
      align-items: center;
      justify-content: flex-start !important;
      gap: 0;
      font-size: 0.65rem;
      flex-wrap: nowrap !important;
      width: 100%;
      box-sizing: border-box;
    }
    
    .hero-rating .star {
      font-size: 1rem !important;
      flex-shrink: 0;
      margin: 0;
      margin-right: -1rem !important;
      filter: grayscale(100%) brightness(2);
      opacity: 0.9;
    }
    
    .hero-rating .star:last-of-type {
      margin-right: 0.2rem !important;
    }
    
    .hero-rating .rating-score,
    .hero-rating .rating-separator,
    .hero-rating .rating-count {
      flex-shrink: 0;
      white-space: nowrap;
      font-size: 0.65rem;
    }
    
    
    .btn-secondary-small {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.6rem 0.9rem;
      border-radius: var(--radius-md);
      font-weight: 600;
      font-size: 0.75rem;
      text-decoration: none;
      transition: all var(--norm) var(--ease);
      background: rgba(255, 255, 255, 0.05);
      color: var(--text-primary);
      border: 1px solid rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      white-space: nowrap;
      flex-shrink: 1;
      min-width: fit-content;
    }
    
    .btn-secondary-small:hover {
      background: rgba(255, 255, 255, 0.1);
      border-color: rgba(255, 255, 255, 0.2);
      transform: translateY(-2px);
    }
  }
  
  @media (min-width: 1024px) {
    .hero-content {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: flex-start;
      margin-top: 0;
    }
    
    /* En desktop, mantener el orden: mockup primero, texto después */
    .hero-mockup {
      order: 1;
      align-items: flex-start;
      justify-content: flex-start;
      padding-top: 0;
      margin-top: -9rem;
      transform: translateY(-1rem);
    }
    
    .hero-text {
      display: flex;
      flex-direction: column;
      order: 2;
      justify-content: flex-start;
      padding-top: 3rem;
    }
    
    .hero-title {
      margin-top: 1rem;
    }
    
    .hero-subtitle {
      margin-top: 0.5rem;
    }
  }
  
  .hero-text {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    animation: fadeInUp 0.8s ease-out;
  }
  
  /* Reset para mobile layout - Los elementos hijos se posicionan directamente en el grid */
  @media (min-width: 480px) and (max-width: 1023px) {
    .hero-text {
      display: contents;
      gap: 0;
    }
  }
  
  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 800;
    line-height: 1.1;
    color: var(--text-primary);
    letter-spacing: -0.03em;
    display: flex;
    flex-direction: column;
    gap: 0;
  }
  
  .title-line {
    display: block;
    line-height: 1.1;
  }
  
  /* En móvil, hacer el título más grande y con líneas específicas */
  @media (min-width: 320px) and (max-width: 1023px) {
    .hero-content .hero-title {
      font-size: clamp(1.5rem, 6vw, 2rem);
      line-height: 1.8;
      font-weight: 800;
    }
    
    .hero-content .title-line {
      display: block;
      line-height: 1.8;
      margin-bottom: 0.6rem;
    }
  }
  
  .hero-subtitle {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    color: var(--text-secondary);
    line-height: 1.6;
    max-width: 600px;
  }
  
  .hero-rating {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .rating-stars {
    display: flex;
    gap: 0.25rem;
  }
  
  .star {
    font-size: 1.5rem;
    filter: drop-shadow(0 2px 4px rgba(255, 215, 0, 0.3));
  }
  
  .rating-text {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    font-size: 1rem;
  }
  
  .rating-score {
    font-weight: 700;
    color: var(--text-primary);
  }
  
  .rating-separator {
    color: var(--text-muted);
  }
  
  .rating-count {
    color: var(--text-muted);
  }
  
  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 0.5rem;
  }
  
  .btn-primary,
  .btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: var(--radius-lg);
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all var(--norm) var(--ease);
    border: none;
    cursor: pointer;
  }
  
  .btn-primary {
    background: var(--grad-primary);
    color: #FFFFFF;
    box-shadow: var(--shadow-lg), var(--shadow-glow-primary);
  }
  
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-xl), var(--shadow-glow-primary);
  }
  
  .btn-secondary {
    background: rgba(255, 255, 255, 0.05);
    color: var(--text-primary);
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
  }
  
  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }
  
  .btn-icon {
    width: 1.25rem;
    height: 1.25rem;
  }
  
  .hero-mockup {
    display: flex;
    align-items: center;
    justify-content: center;
    animation: fadeInRight 1s ease-out 0.2s both;
  }
  
  .mockup-image {
    width: 100%;
    height: auto;
    object-fit: contain;
    max-width: 100%;
  }
  
  /* Ajustar tamaño del mockup en móvil horizontal */
  @media (min-width: 320px) and (max-width: 479px) {
    .hero-mockup {
      flex-shrink: 0;
      width: auto;
      min-width: 180px;
      max-width: 200px;
    }
    
    .mockup-image {
      width: 100%;
      max-width: 200px;
      height: auto;
    }
  }
  
  @media (min-width: 480px) and (max-width: 767px) {
    .hero-mockup {
      flex-shrink: 0;
      width: auto;
      min-width: 220px;
      max-width: 260px;
    }
    
    .mockup-image {
      width: 100%;
      max-width: 260px;
      height: auto;
    }
  }
  
  @media (min-width: 768px) and (max-width: 1023px) {
    .hero-mockup {
      flex-shrink: 0;
      width: auto;
      min-width: 360px;
      max-width: 440px;
    }
    
    .mockup-image {
      width: 100%;
      max-width: 440px;
      height: auto;
    }
  }
  
  @media (min-width: 1024px) {
    .hero-mockup {
      align-items: flex-start;
      justify-content: flex-start;
    }
    
    .mockup-image {
      width: 75%;
      max-width: 600px;
      height: auto;
      object-position: top;
    }
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  /* Tablet - Layout horizontal mejorado */
  @media (min-width: 768px) and (max-width: 1023px) {
    .hero-premium {
      padding: 0.5rem 1rem 1rem;
    }
    
    .hero-content {
      gap: 0.75rem 1rem;
    }
    
    .hero-title {
      font-size: clamp(1.5rem, 4vw, 2.25rem);
      padding-right: 1.5rem;
    }
    
    .hero-subtitle {
      font-size: clamp(1rem, 2vw, 1.125rem);
    }
  }
  
</style>

