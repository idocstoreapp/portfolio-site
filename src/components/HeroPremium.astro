---
export interface Props {
  title?: string;
  subtitle?: string;
  primaryCta?: { text: string; href: string };
  secondaryCta?: { text: string; href: string };
  rating?: { score: string; count: string };
}

const {
  title = "Creamos métodos de trabajo para tu negocio",
  subtitle = "Soluciones digitales que optimizan procesos y generan resultados reales.",
  primaryCta = { text: "Solicitar diagnóstico", href: "/diagnostico" },
  secondaryCta = { text: "Ver casos reales", href: "/proyectos" },
  rating = { score: "4.9/5.0", count: "+ 250 reseñas en Google" },
} = Astro.props;

const heroImages = [
  "/images/hero-1.png",
  "/images/hero-2.png",
  "/images/hero-3.png",
  "/images/hero-4.png"
];
---

<section class="hero-premium">
  <div class="hero-container">
    <!-- Contenido de texto (IZQUIERDA) -->
    <div class="hero-text-section">
      <h1 class="hero-title">{title}</h1>
      
      {subtitle && (
        <p class="hero-subtitle">{subtitle}</p>
      )}

      <!-- CTAs -->
      <div class="hero-cta-buttons">
        <a href={primaryCta.href} class="btn-primary">
          <span>{primaryCta.text}</span>
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
        <a href={secondaryCta.href} class="btn-secondary">
          <span>{secondaryCta.text}</span>
        </a>
  </div>
  
      <!-- Reseñas de Google -->
      <div class="hero-rating">
        <div class="rating-stars">
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="star">⭐</span>
        </div>
        <div class="rating-info">
          <span class="rating-score">{rating.score}</span>
          <span class="rating-separator">•</span>
          <span class="rating-count">{rating.count}</span>
        </div>
      </div>
      
      <!-- Confían en nosotros -->
      <div class="hero-trust-section">
        <h3 class="trust-title">Confían en nosotros</h3>
        <div class="trust-logos">
          <div class="trust-logo">
              <img src="/images/projects/logo-gourmetarabe.png" alt="Gourmet Árabe" />
            </div>
          <div class="trust-logo">
              <img src="/images/projects/logo-idocstore.png" alt="IDoc Store" />
            </div>
          <div class="trust-logo">
              <img src="/images/projects/logo-kubica.png" alt="Kubica" />
            </div>
          <div class="trust-logo">
              <img src="/images/projects/logo-muebleriacadablanca.png" alt="Mueblería Casa Blanca" />
            </div>
            </div>
          </div>
        </div>
        
    <!-- Imagen con carrusel automático (DERECHA) -->
    <div class="hero-image-section">
      <div class="hero-image-carousel" id="hero-carousel">
        {heroImages.map((image, index) => (
          <div class={`hero-image-slide ${index === 0 ? 'active' : ''}`} data-index={index}>
            <img src={image} alt={`Hero ${index + 1}`} />
        </div>
        ))}
        </div>
      <!-- Indicadores del carrusel -->
      <div class="carousel-indicators">
        {heroImages.map((_, index) => (
          <button 
            class={`carousel-indicator ${index === 0 ? 'active' : ''}`}
            data-index={index}
            aria-label={`Ir a imagen ${index + 1}`}
          ></button>
        ))}
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const carousel = document.getElementById('hero-carousel');
    if (!carousel) return;
    
    const slides = carousel.querySelectorAll('.hero-image-slide');
    const indicators = document.querySelectorAll('.carousel-indicator');
    
    if (slides.length === 0) return;

    let currentIndex = 0;
    const totalSlides = slides.length;

    function showSlide(index: number) {
      // Remover clase active de todos los slides
      slides.forEach((slide, i) => {
        if (i === index) {
          slide.classList.add('active');
        } else {
          slide.classList.remove('active');
        }
      });

      // Actualizar indicadores
      indicators.forEach((indicator, i) => {
        if (i === index) {
          indicator.classList.add('active');
        } else {
          indicator.classList.remove('active');
        }
      });

      currentIndex = index;
    }

    function nextSlide() {
      const nextIndex = (currentIndex + 1) % totalSlides;
      showSlide(nextIndex);
    }

    // Cambiar slide cada 4 segundos
    setInterval(nextSlide, 4000);

    // Permitir click en indicadores
    indicators.forEach((indicator, index) => {
      indicator.addEventListener('click', () => {
        showSlide(index);
      });
    });
  });
</script>

<style>
  .hero-premium {
    position: relative;
    width: 100%;
    min-height: 100vh;
    height: 100vh;
    display: flex;
    align-items: center;
    background: #ffffff;
    overflow: hidden;
  }
  
  .hero-container {
    width: 100%;
    max-width: 100%;
    margin: 0;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    align-items: stretch;
    padding: 0;
    height: 100%;
    overflow: hidden;
  }

  /* Texto a la izquierda */
  .hero-text-section {
    order: 1;
  }

  /* Imagen a la derecha */
  .hero-image-section {
    order: 2;
  }

  /* Sección de imagen con carrusel */
  .hero-image-section {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 100vh;
    border-radius: 0;
    overflow: hidden;
    box-shadow: none;
  }

  .hero-image-carousel {
    position: relative;
      width: 100%;
    height: 100%;
  }

  .hero-image-slide {
    position: absolute;
    top: 0;
    left: 0;
      width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.8s ease-in-out;
  }

  .hero-image-slide.active {
    opacity: 1;
      z-index: 1;
  }

  .hero-image-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  /* Indicadores del carrusel */
  .carousel-indicators {
    position: absolute;
    bottom: 1.5rem;
    left: 50%;
    transform: translateX(-50%);
      display: flex;
    gap: 0.75rem;
      z-index: 10;
    }
    
  .carousel-indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid rgba(255, 255, 255, 0.5);
    background: rgba(255, 255, 255, 0.3);
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .carousel-indicator.active {
    background: #ffffff;
    border-color: #ffffff;
    width: 32px;
    border-radius: 6px;
  }

  /* Sección de texto */
  .hero-text-section {
      display: flex;
      flex-direction: column;
    gap: 2rem;
    justify-content: center;
      align-items: center;
      text-align: center;
      height: 100%;
    padding: 4rem 5rem;
    background: #ffffff;
    max-width: 100%;
  }

    .hero-title {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: 3.75rem;
    font-weight: 800;
    line-height: 1.1;
    color: #0f172a;
      margin: 0;
    letter-spacing: -0.02em;
    max-width: 90%;
    text-align: center;
  }

    .hero-subtitle {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: 1.375rem;
    font-weight: 400;
    color: #64748b;
    line-height: 1.7;
      margin: 0;
    max-width: 85%;
      text-align: center;
  }

  /* Botones CTA */
  .hero-cta-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 0.5rem;
    justify-content: center;
    align-items: center;
      width: 100%;
    }
    
  .btn-primary,
  .btn-secondary {
      display: inline-flex;
      align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
      border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
      text-decoration: none;
    transition: all 0.3s ease;
      border: none;
      cursor: pointer;
  }

  .btn-primary {
    background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%);
    color: #ffffff;
    box-shadow: 0 4px 16px rgba(59, 130, 246, 0.3);
  }

  .btn-primary:hover {
      transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(59, 130, 246, 0.4);
  }

  .btn-primary svg {
    width: 20px;
    height: 20px;
  }

  .btn-secondary {
    background: #ffffff;
    color: #0f172a;
    border: 2px solid #e2e8f0;
  }

  .btn-secondary:hover {
    background: #f8fafc;
    border-color: #3b82f6;
    color: #3b82f6;
  }

  /* Confían en nosotros */
  .hero-trust-section {
    margin-top: 1.5rem;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .trust-title {
    font-size: 0.875rem;
      font-weight: 600;
    color: #64748b;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 1rem 0;
    text-align: center;
  }

  .trust-logos {
    display: flex;
    gap: 1.5rem;
      align-items: center;
      justify-content: center;
    flex-wrap: wrap;
      width: 100%;
  }

  .trust-logo {
    height: 40px;
    opacity: 0.6;
    transition: opacity 0.3s ease;
  }

  .trust-logo:hover {
    opacity: 1;
  }

  .trust-logo img {
    height: 100%;
      width: auto;
      object-fit: contain;
    filter: grayscale(100%);
    transition: filter 0.3s ease;
  }

  .trust-logo:hover img {
    filter: grayscale(0%);
  }

  /* Rating */
  .hero-rating {
    display: flex;
      align-items: center;
      justify-content: center;
    gap: 1rem;
    margin-top: 0.5rem;
      width: 100%;
  }

  .rating-stars {
      display: flex;
    gap: 0.25rem;
  }

  .star {
    font-size: 1.25rem;
    line-height: 1;
  }

  .rating-info {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    font-size: 0.9375rem;
    color: #64748b;
  }

  .rating-score {
    font-weight: 700;
    color: #0f172a;
  }

  .rating-separator {
    color: #cbd5e1;
  }

  /* Responsive - Mobile */
  @media (max-width: 1023px) {
    .hero-premium {
      min-height: 100vh;
      height: 100vh;
      padding: 0;
    }
    
    .hero-container {
      grid-template-columns: 1fr;
      gap: 0;
      padding: 0;
      height: 100%;
      position: relative;
    }
    
    .hero-image-section {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      min-height: 100vh;
      border-radius: 0;
      order: 1;
      z-index: 1;
    }

    /* Overlay oscuro sobre la imagen para mejor legibilidad */
    .hero-image-section::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0.4) 0%,
        rgba(0, 0, 0, 0.5) 50%,
        rgba(0, 0, 0, 0.7) 100%
      );
      z-index: 2;
    }

    .hero-text-section {
      position: relative;
      z-index: 10;
      order: 2;
      text-align: center;
      align-items: center;
      justify-content: center;
      padding: 2rem 1.5rem;
      height: 100%;
      background: transparent;
    }

  .hero-title {
      font-size: 2.5rem;
      color: #ffffff;
      text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    }
    
    .hero-subtitle {
      font-size: 1.125rem;
      color: rgba(255, 255, 255, 0.9);
      text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
      max-width: 100%;
    }

    .hero-cta-buttons {
      justify-content: center;
      flex-direction: column;
      width: 100%;
      max-width: 400px;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
      justify-content: center;
    }

    .btn-secondary {
      background: rgba(255, 255, 255, 0.95);
      color: #0f172a;
      border: none;
    }

    .btn-secondary:hover {
      background: #ffffff;
    }

    .hero-trust-section {
      margin-top: 1.5rem;
    }

    .trust-title {
      color: rgba(255, 255, 255, 0.8);
    }

    .trust-logos {
      justify-content: center;
    }

    .trust-logo img {
      filter: brightness(0) invert(1);
      opacity: 0.8;
    }

    .trust-logo:hover img {
      opacity: 1;
    }
    
    .hero-rating {
      justify-content: center;
      margin-top: 1rem;
    }

    .rating-info {
      color: rgba(255, 255, 255, 0.9);
    }

    .rating-score {
      color: #ffffff;
    }

    /* Indicadores más visibles en móvil */
    .carousel-indicators {
      bottom: 2rem;
      z-index: 15;
    }

    .carousel-indicator {
      border-color: rgba(255, 255, 255, 0.6);
      background: rgba(255, 255, 255, 0.4);
    }

    .carousel-indicator.active {
      background: #ffffff;
      border-color: #ffffff;
    }
  }

  @media (max-width: 640px) {
    .hero-title {
      font-size: 2rem;
      line-height: 1.2;
  }
  
  .hero-subtitle {
    font-size: 1rem;
  }
  
    .hero-text-section {
      padding: 1.5rem 1rem;
    }

    .trust-logos {
    gap: 1rem;
    }

    .trust-logo {
      height: 32px;
    }

    .hero-cta-buttons {
      gap: 0.75rem;
  }
  
  .btn-primary,
  .btn-secondary {
      padding: 0.875rem 1.5rem;
      font-size: 0.9375rem;
    }
  }
</style>
