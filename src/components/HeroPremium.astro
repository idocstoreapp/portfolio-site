---
export interface Props {
  title?: string;
  subtitle?: string;
  primaryCta?: { text: string; href: string };
  secondaryCta?: { text: string; href: string };
  rating?: { score: string; count: string };
  mockupImage?: string;
}

const {
  title = "Desarrollo Web, Apps y Automatizaciones Profesionales",
  subtitle = "Soluciones reales para empresas, con resultados medibles.",
  primaryCta = { text: "Ver Portafolio", href: "/projects" },
  secondaryCta = { text: "Solicitar Diagnóstico", href: "/contacto" },
  rating = { score: "4.9/5.0", count: "250+ Reseñas en Google" },
  mockupImage
} = Astro.props;
---

<section class="hero-premium">
  <!-- Background Effects -->
  <div class="hero-background">
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
    <div class="gradient-orb orb-3"></div>
  </div>
  
  <!-- Content Container -->
  <div class="hero-container">
    <div class="hero-content">
      <!-- Mockup Image -->
      <div class="hero-mockup">
        <div class="hero-mockup-mobile">
        <img 
          src="/images/mockup-hero.png" 
          alt="Mockup de aplicación móvil"
          class="mockup-image"
          loading="eager"
        />
        </div>
        <div class="hero-mockup-desktop">
          <img 
            src="/images/webs/mockup-escritorio.png" 
            alt="Sistema de gestión"
            class="mockup-desktop-image"
            loading="lazy"
          />
        </div>
        <div class="hero-systems-banner">
          <div class="systems-slider">
            <div class="system-slide active">Sistemas para servicios técnicos de celulares</div>
            <div class="system-slide">Sistemas para talleres</div>
            <div class="system-slide">Cotizadores para fabricantes</div>
            <div class="system-slide">Manejo de ingresos y egresos internos</div>
            <div class="system-slide">Gestión de empleados</div>
            <div class="system-slide">Manejo de stock y proveedores</div>
          </div>
        </div>
      </div>
      
      <!-- Text Content -->
      <div class="hero-text">
        <h1 class="hero-title">
          Plataformas digitales que convierten crecimiento en resultados reales
        </h1>
        
        <!-- Subtítulo sin card azul -->
        <p class="hero-subtitle">
          Diseñamos sistemas web que optimizan procesos y generan ventas.
        </p>
        
        <!-- CTA Buttons con efecto neón -->
        <div class="hero-cta-primary">
          <a href={primaryCta.href} class="btn-neon btn-neon-blue">
            <span class="btn-text">{primaryCta.text}</span>
            <span class="btn-glow btn-glow-blue"></span>
            <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a href={secondaryCta.href} class="btn-neon btn-neon-orange">
            <span class="btn-text">{secondaryCta.text}</span>
            <span class="btn-glow btn-glow-orange"></span>
          </a>
        </div>
        
        <!-- Rating -->
        <div class="hero-rating">
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="rating-score">{rating.score}</span>
          <span class="rating-separator">•</span>
          <span class="rating-count">{rating.count}</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Override header transparente solo cuando está sobre el hero */
  :global(.header-premium) {
    transition: background 0.3s ease, backdrop-filter 0.3s ease;
  }
  
  /* Cuando el hero está visible, hacer header más transparente */
  .hero-premium:has(+ *) ~ :global(.header-premium),
  body:has(.hero-premium:first-child) :global(.header-premium) {
    background: rgba(255, 255, 255, 0.7) !important;
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }
  
  /* Asegurar legibilidad de links en header transparente */
  body:has(.hero-premium:first-child) :global(.header-premium) :global(.nav-link),
  body:has(.hero-premium:first-child) :global(.header-premium) :global(.mobile-nav-link) {
    color: var(--color-graphite-dark) !important;
  }
  
  .hero-premium {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    padding: 0;
    padding-top: 0rem; /* 4rem original + altura del header */
    padding-bottom: 0;
    margin-bottom: 0;
    overflow: hidden;
    overflow-x: hidden !important;
    background: var(--bg-primary);
    background-color: var(--color-elephant-white);
    background-image: url("/images/background-hero.jpg");
    background-size: cover;
    background-position: center top; /* Mover background más arriba */
    background-repeat: no-repeat;
    background-attachment: fixed;
    width: 100vw !important;
    max-width: 100vw !important;
    box-sizing: border-box;
  }
  
  /* Mobile: altura automática, máximo 50vh */
  @media (min-width: 320px) and (max-width: 1023px) {
    .hero-premium {
      height: auto !important;
      min-height: auto !important;
      max-height: none !important;
      align-items: flex-start;
      padding: 0 !important;
      padding-top: 0 !important;
      padding-bottom: 0 !important;
      margin-bottom: 0 !important;
      overflow: visible;
      overflow-x: hidden !important;
      width: 100vw !important;
      max-width: 100vw !important;
      box-sizing: border-box;
    }
  }
  
  @media (min-width: 1024px) {
    .hero-premium {
      height: 100vh;
      min-height: 100vh;
      max-height: 100vh;
      padding: 1rem 1rem 0;
      align-items: flex-start;
      padding-top: calc(1rem + 5rem); /* 1rem original + altura del header fijo */
      overflow: hidden;
    }
  }
  
  .hero-background {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: 0;
    background-image: url("/images/background-hero.jpg");
    background-size: cover;
    background-position: center top; /* Mover background más arriba */
    background-repeat: no-repeat;
    /* Filtros CSS para hacer el fondo más claro y luminoso */
    filter: brightness(1.15) contrast(0.95);
  }
  
  .hero-background::before {
    content: '';
    position: absolute;
    inset: 0;
    /* Overlay blanco translúcido para mayor claridad */
    background: rgba(255, 255, 255, 0.25);
    z-index: 1;
    mix-blend-mode: overlay;
  }
  
  .gradient-orb {
    display: none; /* Eliminar efectos de orbes para look más limpio y empresarial */
  }
  
  .orb-1,
  .orb-2,
  .orb-3 {
    display: none;
  }
  
  @keyframes float-orb {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(50px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-30px, 30px) scale(0.9);
    }
  }
  
  .hero-container {
    position: relative;
    z-index: 1;
    max-width: 100vw !important;
    margin: 0 auto;
    width: 100vw !important;
    padding: 0;
    margin-top: -30px;
    height: auto;
    min-height: 0;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    overflow: visible;
  }
  
  @media (min-width: 320px) and (max-width: 1023px) {
    .hero-container {
      padding: 0 !important;
      padding-bottom: 0 !important;
      margin-bottom: 0 !important;
      height: auto;
      min-height: auto;
      align-items: flex-start;
      padding-top: 0;
      width: 100vw !important;
      max-width: 100vw !important;
      box-sizing: border-box;
      overflow-x: hidden !important;
    }
  }
  
  @media (min-width: 1024px) {
    .hero-container {
      align-items: flex-start;
      padding-top: 1rem;
      height: 100%;
      max-height: calc(100vh - 6rem); /* Altura del viewport menos header y padding */
      overflow: hidden;
      display: flex;
      flex-direction: column;
    }
  }
  
  .hero-content {
    display: grid;
    grid-template-columns: 1fr auto;
    grid-template-rows: auto 1fr;
    gap: 1rem 1rem;
    align-items: start;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    max-width: 100vw;
    min-height: 0;
    overflow: visible;
  }

    .hero-text {
      max-width: 100vw;
      width: 100%;
      margin-top: -30px;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      min-height: 0;
      overflow: visible;
    }
    
    .hero-title {
      grid-column: 2;
      grid-row: 1;
      margin-bottom: 0;
      margin-top: 0;
      margin-left: 0 !important;
      margin-right: 0 !important;
      padding-left: 1vw;
      padding-right: 1vw !important;
      padding-top: 0;
      align-self: start;
      text-align: right !important;
      font-size: clamp(0.3rem, 2vw, 0.5rem);
      line-height: 0.9;
      max-width: 40vw !important;
      width: 50vw !important;
      overflow: visible;
      display: block;
      box-sizing: border-box;
      position: relative;
      z-index: 10;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
  
  /* Mobile: Reordenamiento vertical optimizado para conversión */
  @media (min-width: 320px) and (max-width: 1023px) {

    .hero-container {
      margin-top: 5rem;
      margin-bottom: 0 !important;
      padding-bottom: 0 !important;
    }
    
    /* Cambiar a layout de columna única para mejor orden visual */
    .hero-content {
      display: grid;
      grid-template-columns: 1fr; /* Una sola columna */
      grid-template-areas: 
        "title"
        "subtitle"
        "mockup"
        "ctas"
        "rating";
      gap: 1.5rem 0; /* Espaciado vertical cómodo para lectura táctil */
      align-items: center;
      justify-items: center;
      width: 100vw !important;
      max-width: 100vw !important;
      height: auto !important;
      min-height: auto !important;
      max-height: none !important;
      box-sizing: border-box;
      padding: 0 1rem !important;
      padding-bottom: 2rem !important;
      margin-bottom: 0 !important;
      overflow-x: hidden !important;
    }
    
    /* Asignar áreas del grid */
    .hero-title {
      grid-area: title;
      text-align: center !important; /* Centrado para mejor jerarquía */
      margin: 0 !important;
      padding: 0 0.5rem !important;
      width: 100% !important;
      max-width: 100% !important;
    }
    
    /* Subtítulo: Segundo en el orden visual - sin card azul */
    .hero-subtitle {
      grid-area: subtitle;
      width: 100% !important;
      max-width: 100% !important;
      margin: 0 !important;
      padding: 0 0.5rem !important;
      text-align: center !important;
      font-size: clamp(1rem, 3vw, 1.25rem) !important;
      color: var(--color-graphite-dark) !important;
      line-height: 1.5 !important;
      font-weight: 500;
    }
    
    /* Mockup más a la derecha */
    .hero-mockup {
      grid-area: mockup;
      display: flex;
      align-items: center;
      justify-content: flex-end !important; /* Alineado a la derecha */
      width: 100% !important;
      max-width: 100% !important;
      margin: 0 !important;
      margin-left: auto !important; /* Empujar hacia la derecha */
      margin-right: -3.5rem !important; /* Mover 2.5rem más a la derecha (fuera del contenedor) */
      padding: 0 !important;
      z-index: 1;
      position: relative;
      transform: translateX(-1rem); /* Ajuste adicional para moverlo más a la derecha */
    }
    
    .hero-mockup .mockup-image {
      width: 100% !important;
      max-width: 290px !important; /* Mockup más pequeño */
      max-height: 45vh !important; /* Máximo 35vh de altura */
      height: auto !important;
      object-fit: contain;
      display: block;
    }
    
    /* CTAs: Cuarto en el orden visual - apilados verticalmente */
    .hero-cta-primary {
      grid-area: ctas;
      width: 100% !important;
      max-width: 100% !important;
      margin: 0 !important;
      margin-top: 1.3rem !important; /* Bajar los CTAs 1.3rem más */
      padding: 0 1rem !important; /* Padding lateral para evitar que toquen bordes */
      display: flex !important;
      flex-direction: column !important; /* Apilar verticalmente */
      gap: 2rem !important; /* Más separación entre CTAs */
      align-items: center !important;
      justify-content: center !important;
      box-sizing: border-box;
      position: relative; /* Para posicionar elementos decorativos */
    }
    
    /* Asegurar que los CTAs estén por encima del background */
    .hero-content {
      position: relative;
    }
    
    /* Los CTAs deben estar por encima de cualquier elemento del background */
    .hero-cta-primary {
      position: relative;
      z-index: 10 !important; /* Por encima del background y sus rayas */
      background: transparent; /* Mantener transparente para no ocultar completamente */
    }
    
    /* Asegurar que los botones también estén por encima */
    .btn-neon {
      position: relative;
      z-index: 11 !important;
    }
    
    .hero-rating {
      grid-area: rating;
      width: 100% !important;
      max-width: 100% !important;
      margin: 0 !important;
      padding: 0 !important;
      justify-content: center !important;
    }
    
    /* Resetear estilos de grid anteriores que puedan interferir */
    .hero-text {
      display: contents; /* Los hijos directos se posicionan en el grid padre */
      max-width: 100% !important;
      width: 100% !important;
      margin: 0 !important;
      box-sizing: border-box;
    }
    
    /* Título: Primero en el orden visual */
    .hero-title {
      grid-area: title; /* Usar grid-area en lugar de grid-column/row */
      text-align: center !important; /* Centrado para mejor jerarquía */
      margin: 0 !important;
      padding: 0 0.5rem !important;
      font-size: clamp(1.75rem, 8vw, 2.5rem) !important;
      line-height: 1.2 !important;
      max-width: 100% !important;
      width: 100% !important;
      overflow: visible;
      display: block !important;
      box-sizing: border-box;
      position: relative;
      z-index: 10;
      word-wrap: break-word;
      overflow-wrap: break-word;
      color: var(--text-primary) !important;
      visibility: visible !important;
      opacity: 1 !important;
    }
    
    /* Ajustar alineación de líneas del título para layout centrado */
    .title-line {
      display: block;
      text-align: center !important; /* Centrado para nuevo layout vertical */
      margin-right: 0 !important;
      padding-right: 0 !important;
      line-height: 1.3 !important; /* Mejor espaciado para legibilidad */
      margin-bottom: 0.25rem !important;
      margin-top: 0 !important;
      width: 100% !important;
      max-width: 100% !important;
      direction: ltr;
      word-wrap: break-word;
      overflow-wrap: break-word;
      white-space: normal;
      box-sizing: border-box;
    }
    
    .title-align-right {
      display: block;
      text-align: right;
      padding-right: 0;
      width: 100%;
      box-sizing: border-box;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
    
    .title-align-left {
      display: block;
      text-align: right;
      padding-right: 0;
      width: 100%;
      box-sizing: border-box;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
    
    /* Línea con "para hacer tu" y "EMPRESA" - usar flex para alinear */
    .title-line:has(.title-align-right) {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      text-align: right !important;
    }
    
    .title-line:has(.title-align-right) .title-align-right {
      flex-shrink: 0;
      text-align: right;
    }
    
    .title-line:has(.title-align-right) .title-align-left {
      flex-shrink: 0;
      text-align: left;
      margin-left: auto;
      margin-right: 0;
    }
    
    /* Líneas compactas - "más EFICIENTE" a la derecha */
    .title-line-compact:has(.title-align-right) {
      text-align: right !important;
    }
    
    .title-line-compact:has(.title-align-right) .title-align-right {
      display: inline-block;
      text-align: right;
    }
    
    /* "y" y "RENTABLE" deben estar alineados a la derecha como "más EFICIENTE" */
    .title-line-compact:has(.title-align-right) ~ .title-line-compact {
      text-align: right !important;
      padding-left: 0;
      margin-left: 0;
    }
    
    .title-line-compact:has(.title-align-right) ~ .title-line-compact .title-align-left,
    .title-line-compact:has(.title-align-right) ~ .title-line-compact .title-align-right {
      text-align: right;
      margin-left: 0;
      padding-left: 0;
      display: inline-block;
    }
    
    /* Calcular el padding-left necesario para alinear con "más EFICIENTE" */
    /* El padding debe ser: ancho del contenedor - ancho del texto "más EFICIENTE" */
    .title-line-compact:has(.title-align-right) {
      position: relative;
    }
    
    .title-line-compact:has(.title-align-right) ~ .title-line-compact {
      padding-left: calc(100% - 100%);
    }
    
    .title-line-compact {
      margin-bottom: 0 !important;
      margin-top: 0 !important;
      line-height: 0.75 !important;
      text-align: left !important;
    }
    
    /* Línea con "para" y "EMPRESA" - alinear a la izquierda */
    .title-line:has(.title-align-left) {
      text-align: left !important;
    }
    
    .title-accent {
      color: var(--accent-orange);
      background: var(--grad-orange);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      white-space: nowrap !important;
    }
         .title-line,
     .title-medium,
    .title-accent,
   .title-large {
    margin-top: 0.2rem !important;}
    
    /* Subtítulo: Segundo en el orden visual */
    /* Subtítulo ya está definido arriba con grid-area: subtitle */
    .hero-subtitle {
      font-size: clamp(1rem, 5vw, 1.25rem) !important;
      color: var(--color-graphite-dark) !important;
      font-style: normal;
      line-height: 1.5 !important;
      margin: 0 !important;
      padding: 0 0.5rem !important;
      display: block;
      word-wrap: break-word;
      overflow-wrap: break-word;
      text-align: center !important;
    }
    
    .hero-support-text {
      color: rgba(212, 175, 55, 0.85) !important; /* Color dorado con opacidad */
      margin: 0;
    }
    
    
 
    
    .subtitle-line {
      display: block;
      text-align: center;
      margin-bottom: 0 !important;
      margin-top: 0 !important;
      line-height: 1.1 !important;
    }
    
    /* CTAs: Cuarto en el orden visual - ya definido arriba con grid-area: ctas */
    .hero-cta-primary {
      /* grid-area: ctas ya definido arriba */
      display: flex !important;
      justify-content: space-between !important;
      gap: 0.75rem;
      flex-wrap: wrap; /* Permitir wrap si es necesario */
      flex-direction: row; /* Botones lado a lado */
      align-items: space-between;
      box-sizing: border-box;
      width: 100%;
      max-width: 100%;
      position: relative;
      z-index: 10;
    }
    
    /* Botones con efecto neón - más pequeños para mobile */
    .btn-neon {
      position: relative;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.3rem;
      padding: 0.5rem 1rem !important; /* Padding más pequeño */
      border-radius: 12px;
      font-weight: 600 !important; /* Peso ligeramente menor */
      font-size: 0.875rem !important; /* Tamaño de fuente más pequeño */
      text-decoration: none;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      white-space: nowrap;
      flex-shrink: 0;
      min-width: fit-content;
      width: 100% !important; /* Ancho completo del contenedor */
      max-width: 280px !important; /* Limitar ancho máximo para evitar desbordamiento */
      overflow: hidden;
      border: none;
      cursor: pointer;
      box-sizing: border-box;
    }
    
    .btn-text {
      position: relative;
      z-index: 2;
      color: #FFFFFF; /* Color por defecto para botón primario */
    }
    
    /* Texto negro para CTA secundario (Ver casos reales) */
    .btn-neon-orange .btn-text {
      color: var(--color-black-deep) !important; /* Negro para mejor legibilidad */
    }
    
    .btn-neon .btn-icon {
      position: relative;
      z-index: 2;
      width: 1rem;
      height: 1rem;
      color: #FFFFFF;
    }
    
    .btn-glow {
      position: absolute;
      inset: -2px;
      border-radius: 12px;
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: 0;
    }
    
    .btn-neon-blue {
      background: var(--color-black-deep);
      color: var(--color-white-pure);
      box-shadow: var(--shadow-md);
      border: 1px solid var(--color-graphite-dark);
    }
    
    .btn-neon-blue:hover {
      background: var(--color-graphite-dark);
      box-shadow: var(--shadow-lg);
      transform: translateY(-2px);
    }
    
    .btn-glow-blue {
      display: none; /* Eliminar efecto glow */
    }
    
    .btn-neon-orange {
      background: rgba(255, 255, 255, 0.95) !important; /* Fondo blanco semi-transparente para cubrir rayas del background */
      color: var(--color-black-deep);
      box-shadow: none;
      border: 2px solid var(--color-graphite-dark);
      backdrop-filter: blur(5px); /* Efecto blur para suavizar */
    }
    
    .btn-neon-orange:hover {
      background: var(--color-grey-light);
      border-color: var(--color-black-deep);
      transform: translateY(-2px);
    }
    
    .btn-glow-orange {
      display: none; /* Eliminar efecto glow */
    }
    
    .btn-neon:hover {
      transform: translateY(-2px) scale(1.02);
    }
    
    .btn-neon:hover .btn-glow {
      opacity: 1;
    }
    
    .btn-neon-blue:hover {
      box-shadow: 
        0 0 30px rgba(99, 102, 241, 0.6),
        0 0 60px rgba(59, 130, 246, 0.5),
        0 0 90px rgba(6, 182, 212, 0.3),
        inset 0 0 20px rgba(255, 255, 255, 0.15);
    }
    
    .btn-neon-orange:hover {
      box-shadow: 
        0 0 30px rgba(249, 115, 22, 0.6),
        0 0 60px rgba(251, 146, 60, 0.5),
        0 0 90px rgba(251, 191, 36, 0.3),
        inset 0 0 20px rgba(255, 255, 255, 0.15);
    }
    
    .btn-primary-small {
      display: inline-flex;
      align-items: center;
      justify-content: center;
