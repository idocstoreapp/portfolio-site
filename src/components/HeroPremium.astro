<script>
  // Slider de sistemas para desktop/ipad
  document.addEventListener('DOMContentLoaded', function() {
    // Slider de sistemas para desktop/ipad
    const slides = document.querySelectorAll('.system-slide');
    if (slides.length > 0) {
      let currentSlide = 0;
      
      function showSlide(index: number) {
        slides.forEach((slide, i) => {
          slide.classList.remove('active');
          if (i === index) {
            slide.classList.add('active');
          }
        });
      }
      
      function nextSlide() {
        currentSlide = (currentSlide + 1) % slides.length;
        showSlide(currentSlide);
      }
      
      // Cambiar slide cada 3 segundos
      if (slides.length > 1) {
        setInterval(nextSlide, 3000);
        showSlide(0);
      }
    }
    
    // Slider de subtítulos para móvil
    const subtitleSlides = document.querySelectorAll('.subtitle-slide');
    if (subtitleSlides.length > 1) {
      // Verificar si estamos en móvil
      function isMobile() {
        return window.innerWidth <= 1023;
      }
      
      let currentSubtitleSlide = 0;
      let subtitleInterval: ReturnType<typeof setInterval> | null = null;
      
      function showSubtitleSlide(index: number) {
        subtitleSlides.forEach((slide, i) => {
          slide.classList.remove('active', 'leaving');
          (slide as HTMLElement).style.display = 'block';
          
          if (i === index) {
            slide.classList.add('active');
            (slide as HTMLElement).style.visibility = 'visible';
          } else {
            (slide as HTMLElement).style.visibility = 'hidden';
          }
        });
      }
      
      function nextSubtitleSlide() {
        if (!isMobile()) {
          return;
        }
        currentSubtitleSlide = (currentSubtitleSlide + 1) % subtitleSlides.length;
        showSubtitleSlide(currentSubtitleSlide);
      }
      
      function startSubtitleSlider() {
        // Limpiar intervalo anterior si existe
        if (subtitleInterval) {
          clearInterval(subtitleInterval);
          subtitleInterval = null;
        }
        
        if (isMobile()) {
          // Asegurar que el slider esté visible
          const sliderContainer = document.querySelector('.subtitle-slider-mobile');
          const desktopContent = document.querySelector('.subtitle-content-desktop');
          if (sliderContainer) {
            (sliderContainer as HTMLElement).style.display = 'block';
          }
          if (desktopContent) {
            (desktopContent as HTMLElement).style.display = 'none';
          }
          
          // Establecer altura del card basada en hero-subtitle
          const firstSlide = subtitleSlides[0];
          if (firstSlide && sliderContainer) {
            // Temporarily show first slide to measure its height
            firstSlide.classList.add('active');
            (firstSlide as HTMLElement).style.position = 'relative';
            (firstSlide as HTMLElement).style.opacity = '1';
            (firstSlide as HTMLElement).style.visibility = 'visible';
            const tempHeight = (firstSlide as HTMLElement).offsetHeight;
            firstSlide.classList.remove('active');
            (firstSlide as HTMLElement).style.position = '';
            (firstSlide as HTMLElement).style.opacity = '';
            (firstSlide as HTMLElement).style.visibility = '';
            
            // Set the height
            (sliderContainer as HTMLElement).style.height = tempHeight + 'px';
          }
          
          // Mostrar solo el primer slide (subtitle)
          showSubtitleSlide(0);
          
          // Cambiar cada 4 segundos
          subtitleInterval = setInterval(nextSubtitleSlide, 4000);
        } else {
          // En desktop, ocultar slider y mostrar contenido
          const sliderContainer = document.querySelector('.subtitle-slider-mobile');
          const desktopContent = document.querySelector('.subtitle-content-desktop');
          if (sliderContainer) {
            (sliderContainer as HTMLElement).style.display = 'none';
          }
          if (desktopContent) {
            (desktopContent as HTMLElement).style.display = 'block';
          }
          subtitleSlides.forEach(slide => slide.classList.remove('active'));
        }
      }
      
      // Iniciar slider inmediatamente
      startSubtitleSlider();
      
      // Reiniciar slider al cambiar tamaño de ventana
      let resizeTimeout: ReturnType<typeof setTimeout>;
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(() => {
          startSubtitleSlider();
        }, 100);
      });
    }
  });
</script>

