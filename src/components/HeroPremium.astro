---
export interface Props {
  title?: string;
  subtitle?: string;
  primaryCta?: { text: string; href: string };
  secondaryCta?: { text: string; href: string };
  rating?: { score: string; count: string };
  mockupImage?: string;
}

const {
  title = "Desarrollo Web, Apps y Automatizaciones Profesionales",
  subtitle = "Soluciones reales para empresas, con resultados medibles.",
  primaryCta = { text: "Ver Portafolio", href: "/projects" },
  secondaryCta = { text: "Solicitar Diagnóstico", href: "/contacto" },
  rating = { score: "4.9/5.0", count: "250+ Reseñas en Google" },
  mockupImage
} = Astro.props;
---

<section class="hero-premium">
  <!-- Background Effects -->
  <div class="hero-background">
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
    <div class="gradient-orb orb-3"></div>
  </div>
  
  <!-- Content Container -->
  <div class="hero-container">
    <div class="hero-content">
      <!-- Mockup Image -->
      <div class="hero-mockup">
        <img 
          src="/images/mockup-hero.png" 
          alt="Mockup de aplicación móvil"
          class="mockup-image"
          loading="eager"
        />
      </div>
      
      <!-- Text Content -->
      <div class="hero-text">
        <h1 class="hero-title">
          <span class="title-line"><span class="title-align-left">Tu socio</span></span>
          <span class="title-line">TECNOLOGICO</span>
          <span class="title-line"><span class="title-align-right">para hacer tu</span> </span>
          <span class="title-align-right">EMPRESA</span>
          <span class="title-line title-line-compact"><span class="title-align-right">más<span class="title-accent">EFICIENTE</span></span></span>
          <span class="title-line title-line-compact"><span class="title-align-left">y</span></span>
          <span class="title-accent"><span class="title-align-right">RENTABLE</span></span>
        </h1>
        
        <p class="hero-subtitle">
          <span class="subtitle-line">Digitalizamos y automatizamos tus procesos</span>
          <span class="subtitle-line">para que trabajes mejor, con más control</span>
          <span class="subtitle-line">y menos esfuerzo</span>
        </p>
        
        <!-- CTA Buttons con efecto neón -->
        <div class="hero-cta-primary">
          <a href={primaryCta.href} class="btn-neon btn-neon-blue">
            <span class="btn-text">{primaryCta.text}</span>
            <span class="btn-glow btn-glow-blue"></span>
            <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a href={secondaryCta.href} class="btn-neon btn-neon-orange">
            <span class="btn-text">{secondaryCta.text}</span>
            <span class="btn-glow btn-glow-orange"></span>
          </a>
        </div>
        
        <!-- Rating -->
        <div class="hero-rating">
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="star">⭐</span>
          <span class="rating-score">{rating.score}</span>
          <span class="rating-separator">•</span>
          <span class="rating-count">{rating.count}</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-premium {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    padding: 4rem 0;
    overflow: hidden;
    overflow-x: hidden !important;
    background: var(--bg-primary);
    width: 100%;
    max-width: 100vw;
    box-sizing: border-box;
  }
  
  /* Mobile: altura automática, máximo 50vh */
  @media (min-width: 320px) and (max-width: 1023px) {
    .hero-premium {
      height: auto;
      min-height: auto;
      max-height: 100vh;
      align-items: flex-start;
      padding: 5rem 0 2rem;
      overflow: visible;
      overflow-x: hidden !important;
      width: 100% !important;
      max-width: 100vw !important;
      box-sizing: border-box;
    }
  }
  
  @media (min-width: 1024px) {
    .hero-premium {
      height: 100vh;
      min-height: 100vh;
      padding: 1rem 1rem 6rem;
      align-items: flex-start;
      padding-top: 0.5rem;
    }
  }
  
  .hero-background {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: 0;
  }
  
  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
    animation: float-orb 20s ease-in-out infinite;
  }
  
  .orb-1 {
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, var(--accent-primary), transparent);
    top: -300px;
    left: -300px;
    animation-delay: 0s;
  }
  
  .orb-2 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, var(--accent-secondary), transparent);
    bottom: -250px;
    right: -250px;
    animation-delay: 5s;
  }
  
  .orb-3 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, var(--accent-tertiary), transparent);
    top: 50%;
    right: 10%;
    animation-delay: 10s;
  }
  
  @keyframes float-orb {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(50px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-30px, 30px) scale(0.9);
    }
  }
  
  .hero-container {
    position: relative;
    z-index: 1;
    max-width: 100%;
    margin: 0 auto;
    width: 100%;
    padding: 0;
    height: 100%;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    overflow-x: hidden !important;
  }
  
  @media (min-width: 320px) and (max-width: 1023px) {
    .hero-container {
      padding: 0 !important;
      height: auto;
      align-items: flex-start;
      padding-top: 0;
      width: 100% !important;
      max-width: 100% !important;

    }
  }
  
  @media (min-width: 1024px) {
    .hero-container {
      align-items: flex-start;
      padding-top: 1rem;
    }
  }
  
  .hero-content {
    display: grid;
    grid-template-columns: 1fr auto;
    grid-template-rows: auto 1fr;
    gap: 1rem 1rem;
    align-items: start;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;

  }
  
  /* Mobile: Mockup a la izquierda, título a la derecha (desde 320px) */
  @media (min-width: 320px) and (max-width: 1023px) {
    .hero-content {
      display: grid;
      grid-template-columns: 1fr auto;
      grid-template-rows: auto auto auto auto;
      gap: 0.25rem 0.1rem;
      align-items: start;
      width: 100% !important;
      max-width: 100% !important;
      box-sizing: flex-box;
      padding: 0;
  
    }
    
    .hero-mockup {
      grid-column: 1;
      grid-row: 1 / -1;
      display: flex;
      align-items: flex-start;
      justify-content: flex-start;
      flex-shrink: 0;
      margin-top: 0;
      min-width: 200px;
      max-width: 330px;
      padding-right: 0.2rem;
      padding-left: 0;
      z-index: 1;
      position: relative;
      width: auto;
    }
    
    .hero-mockup .mockup-image {
      width: 100%;
      max-width: 330px;
      height: auto;
      object-fit: contain;
    }
    
    .hero-title {
      grid-column: 2;
      grid-row: 1;
      margin-bottom: 0;
      margin-top: 0;
      margin-left: 0 !important;
      margin-right: 0 !important;
      padding-left: 0.2rem;
      padding-right: 0.5rem !important;
      padding-top: 0;
      align-self: start;
      text-align: right !important;
      font-size: clamp(0.75rem, 2.8vw, 1rem);
      line-height: 0.9;
      max-width: 100% !important;
      width: 77% !important;
      overflow: visible;
      display: block;
      box-sizing: border-box;
      position: relative;
      z-index: 10;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
    
    .title-line {
      display: block;
      text-align: right !important;
      margin-right: 0 !important;
      padding-right: 0 !important;
      line-height: 0.9;
      margin-bottom: 0.05rem;
      width: 100% !important;
      max-width: 100% !important;
      direction: ltr;
      word-wrap: break-word;
      overflow-wrap: break-word;
      white-space: normal;
      box-sizing: border-box;
    }
    
    .title-align-right {
      display: block;
      text-align: right;
      padding-right: 0;
      width: 100%;
      box-sizing: border-box;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
    
    .title-align-left {
      display: block;
      text-align: right;
      padding-right: 0;
      width: 100%;
      box-sizing: border-box;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
    
    /* Línea con "para hacer tu" y "EMPRESA" - usar flex para alinear */
    .title-line:has(.title-align-right) {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      text-align: right !important;
    }
    
    .title-line:has(.title-align-right) .title-align-right {
      flex-shrink: 0;
      text-align: right;
    }
    
    .title-line:has(.title-align-right) .title-align-left {
      flex-shrink: 0;
      text-align: left;
      margin-left: auto;
      margin-right: 0;
    }
    
    /* Líneas compactas - "más EFICIENTE" a la derecha */
    .title-line-compact:has(.title-align-right) {
      text-align: right !important;
    }
    
    .title-line-compact:has(.title-align-right) .title-align-right {
      display: inline-block;
      text-align: right;
    }
    
    /* "y" y "RENTABLE" deben estar alineados a la derecha como "más EFICIENTE" */
    .title-line-compact:has(.title-align-right) ~ .title-line-compact {
      text-align: right !important;
      padding-left: 0;
      margin-left: 0;
    }
    
    .title-line-compact:has(.title-align-right) ~ .title-line-compact .title-align-left,
    .title-line-compact:has(.title-align-right) ~ .title-line-compact .title-align-right {
      text-align: right;
      margin-left: 0;
      padding-left: 0;
      display: inline-block;
    }
    
    /* Calcular el padding-left necesario para alinear con "más EFICIENTE" */
    /* El padding debe ser: ancho del contenedor - ancho del texto "más EFICIENTE" */
    .title-line-compact:has(.title-align-right) {
      position: relative;
    }
    
    .title-line-compact:has(.title-align-right) ~ .title-line-compact {
      padding-left: calc(100% - 100%);
    }
    
    .title-line-compact {
      margin-bottom: 0.01rem;
      line-height: 0.8;
    }
    
    /* Línea con "para" y "EMPRESA" - alinear a la izquierda */
    .title-line:has(.title-align-left) {
      text-align: left !important;
    }
    
    /* Líneas compactas con "más", "y" - alinear a la izquierda */
    .title-line-compact {
      text-align: left !important;
    }
    
    .title-accent {
      color: var(--accent-orange);
      background: var(--grad-orange);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      white-space: nowrap !important;
    }
    
    .hero-subtitle {
      grid-column: 1 / -1;
      grid-row: 2;
      margin-top: calc(0.25rem + 2rem);
      margin-bottom: 0;
      margin-left: 0 !important;
      margin-right: 0 !important;
      padding-left: 0.3rem;
      padding-right: 0.3rem;
      text-align: center !important;
      font-size: clamp(0.65rem, 2.2vw, 0.85rem);
      line-height: 1.3;
      max-width: 100% !important;
      width: 80%;
      display: flex;
      flex-direction: column;
      align-items: center;
      position: relative;
      left: 0 !important;
      z-index: 10;
      box-sizing: border-box;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
    
    .subtitle-line {
      display: block;
      text-align: center;
      margin-bottom: 0.1rem;
    }
    
    .hero-cta-primary {
      grid-column: 1 / -1;
      grid-row: 3;
      margin-top: 0.25rem;
      margin-bottom: 0;
      margin-left: 0 !important;
      margin-right: 0 !important;
      padding-left: 0.3rem;
      padding-right: 0.3rem;
      display: flex;
      justify-content: center;
      gap: 0.4rem;
      flex-wrap: nowrap;
      flex-direction: row;
      align-items: center;
      box-sizing: border-box;
      width: 40%;
      max-width: 100%;
      position: relative;
      z-index: 10;
    }
    
    /* Botones con efecto neón */
    .btn-neon {
      position: relative;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.3rem;
      padding: 0.6rem 0.85rem;
      border-radius: 12px;
      font-weight: 700;
      font-size: 0.75rem;
      text-decoration: none;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      white-space: nowrap;
      flex-shrink: 1;
      min-width: fit-content;
      max-width: calc(50% - 0.25rem);
      overflow: hidden;
      border: none;
      cursor: pointer;
      box-sizing: border-box;
    }
    
    .btn-text {
      position: relative;
      z-index: 2;
      color: #FFFFFF;
    }
    
    .btn-neon .btn-icon {
      position: relative;
      z-index: 2;
      width: 1rem;
      height: 1rem;
      color: #FFFFFF;
    }
    
    .btn-glow {
      position: absolute;
      inset: -2px;
      border-radius: 12px;
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: 0;
    }
    
    .btn-neon-blue {
      background: linear-gradient(135deg, #6366f1 0%, #3b82f6 50%, #06b6d4 100%);
      box-shadow: 
        0 0 20px rgba(99, 102, 241, 0.4),
        0 0 40px rgba(59, 130, 246, 0.3),
        inset 0 0 20px rgba(255, 255, 255, 0.1);
    }
    
    .btn-glow-blue {
      background: linear-gradient(135deg, #6366f1, #3b82f6, #06b6d4);
      filter: blur(8px);
    }
    
    .btn-neon-orange {
      background: linear-gradient(135deg, #f97316 0%, #fb923c 50%, #fbbf24 100%);
      box-shadow: 
        0 0 20px rgba(249, 115, 22, 0.4),
        0 0 40px rgba(251, 146, 60, 0.3),
        inset 0 0 20px rgba(255, 255, 255, 0.1);
    }
    
    .btn-glow-orange {
      background: linear-gradient(135deg, #f97316, #fb923c, #fbbf24);
      filter: blur(8px);
    }
    
    .btn-neon:hover {
      transform: translateY(-2px) scale(1.02);
    }
    
    .btn-neon:hover .btn-glow {
      opacity: 1;
    }
    
    .btn-neon-blue:hover {
      box-shadow: 
        0 0 30px rgba(99, 102, 241, 0.6),
        0 0 60px rgba(59, 130, 246, 0.5),
        0 0 90px rgba(6, 182, 212, 0.3),
        inset 0 0 20px rgba(255, 255, 255, 0.15);
    }
    
    .btn-neon-orange:hover {
      box-shadow: 
        0 0 30px rgba(249, 115, 22, 0.6),
        0 0 60px rgba(251, 146, 60, 0.5),
        0 0 90px rgba(251, 191, 36, 0.3),
        inset 0 0 20px rgba(255, 255, 255, 0.15);
    }
    
    .btn-primary-small {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.4rem;
      padding: 0.6rem 0.9rem;
      border-radius: var(--radius-md);
      font-weight: 600;
      font-size: 0.75rem;
      text-decoration: none;
      transition: all var(--norm) var(--ease);
      background: var(--grad-primary);
      color: #FFFFFF;
      box-shadow: var(--shadow-lg), var(--shadow-glow-primary);
      white-space: nowrap;
      flex-shrink: 1;
      min-width: fit-content;
    }
    
    .btn-primary-small:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-xl), var(--shadow-glow-primary);
    }
    
    .hero-rating {
      grid-column: 1 / -1;
      grid-row: 4;
      margin-top: 0.25rem;
      margin-bottom: 0;
      margin-left: 0 !important;
      margin-right: 0 !important;
      padding-left: 0.3rem !important;
      padding-right: 0.3rem;
      display: flex !important;
      align-items: center;
      justify-content: center !important;
      gap: 0.3rem;
      font-size: 0.6rem;
      flex-wrap: wrap !important;
      width: 80%;
      max-width: 100%;
      box-sizing: border-box;
      position: relative;
      z-index: 10;
    }
    
    .hero-rating .star {
      font-size: 1rem !important;
      flex-shrink: 0;
      margin: 0;
      margin-right: -1rem !important;
      filter: grayscale(100%) brightness(2);
      opacity: 0.9;
    }
    
    .hero-rating .star:last-of-type {
      margin-right: 0.2rem !important;
    }
    
    .hero-rating .rating-score,
    .hero-rating .rating-separator,
    .hero-rating .rating-count {
      flex-shrink: 0;
      white-space: nowrap;
      font-size: 0.65rem;
    }
    
    
    .btn-secondary-small {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.6rem 0.9rem;
      border-radius: var(--radius-md);
      font-weight: 600;
      font-size: 0.75rem;
      text-decoration: none;
      transition: all var(--norm) var(--ease);
      background: rgba(255, 255, 255, 0.05);
      color: var(--text-primary);
      border: 1px solid rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      white-space: nowrap;
      flex-shrink: 1;
      min-width: fit-content;
    }
    
    .btn-secondary-small:hover {
      background: rgba(255, 255, 255, 0.1);
      border-color: rgba(255, 255, 255, 0.2);
      transform: translateY(-2px);
    }
  }
  
  @media (min-width: 1024px) {
    .hero-content {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: flex-start;
      margin-top: 0;
    }
    
    /* En desktop, mantener el orden: mockup primero, texto después */
    .hero-mockup {
      order: 1;
      align-items: flex-start;
      justify-content: flex-start;
      padding-top: 0;
      margin-top: -14rem;
      transform: translateY(-3rem);
    }
    
    .hero-text {
      display: flex;
      flex-direction: column;
      order: 2;
      justify-content: flex-start;
      padding-top: 5rem;
      align-items: flex-end;
      width: 100%;
    }
    
    .hero-title {
      margin-top: 2rem;
      text-align: right !important;
      width: 100%;
      padding-right: 0.5rem !important;
      margin-right: 0.5rem !important;
      max-width: 100%;
      box-sizing: border-box;
    }
    
    .title-line {
      text-align: right !important;
      margin-right: 0 !important;
      padding-right: 0.2rem !important;
      line-height: 1.1;
      margin-bottom: 0.2rem;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
    
    .hero-subtitle {
      margin-top: 1rem;
      text-align: center;
      width: 100%;
      max-width: 100%;
      align-items: center;
      padding-left: 1rem;
      padding-right: 1rem;
      box-sizing: border-box;
    }
    
    .hero-cta-primary {
      margin-top: 1rem;
      justify-content: center;
      width: 100%;
      max-width: 100%;
      padding-left: 1rem;
      padding-right: 1rem;
      box-sizing: border-box;
      flex-wrap: nowrap;
      display: flex;
      gap: 1rem;
    }
    
    .hero-rating {
      margin-top: 1rem;
      justify-content: center;
      width: 100%;
      max-width: 100%;
      padding-left: 1rem;
      padding-right: 1rem;
      box-sizing: border-box;
      flex-wrap: wrap;
    }
  }
  
  .hero-text {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    animation: fadeInUp 0.8s ease-out;
  }
  
  /* Reset para mobile layout - Los elementos hijos se posicionan directamente en el grid */
  @media (min-width: 480px) and (max-width: 1023px) {
    .hero-text {
      display: contents;
      gap: 0;
    }
  }
  
  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 800;
    line-height: 1.1;
    color: var(--text-primary);
    letter-spacing: -0.03em;
    display: flex;
    flex-direction: column;
    gap: 0;
  }
  
  .title-line {
    display: block;
    line-height: 1.1;
  }
  
  /* En móvil, hacer el título más grande y con líneas específicas */
  @media (min-width: 320px) and (max-width: 1023px) {
    .hero-content .hero-title {
      font-size: clamp(1.5rem, 6vw, 2rem);
      line-height: 1.8;
      font-weight: 800;
    }
    
    .hero-content .title-line {
      display: block;
      line-height: 1.8;
      margin-bottom: 0.6rem;
    }
  }
  
  .hero-subtitle {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    color: var(--text-secondary);
    line-height: 1.6;
    max-width: 600px;
  }
  
  .hero-rating {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .rating-stars {
    display: flex;
    gap: 0.25rem;
  }
  
  .star {
    font-size: 1.5rem;
    filter: drop-shadow(0 2px 4px rgba(255, 215, 0, 0.3));
  }
  
  .rating-text {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    font-size: 1rem;
  }
  
  .rating-score {
    font-weight: 700;
    color: var(--text-primary);
  }
  
  .rating-separator {
    color: var(--text-muted);
  }
  
  .rating-count {
    color: var(--text-muted);
  }
  
  .hero-cta {
    display: flex;
