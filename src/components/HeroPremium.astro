<script>
  // Slider de sistemas para desktop/ipad
  document.addEventListener('DOMContentLoaded', function() {
    // Slider de sistemas para desktop/ipad
    const slides = document.querySelectorAll('.system-slide');
    if (slides.length > 0) {
      let currentSlide = 0;
      
      function showSlide(index: number) {
        slides.forEach((slide, i) => {
          slide.classList.remove('active');
          if (i === index) {
            slide.classList.add('active');
          }
        });
      }
      
      function nextSlide() {
        currentSlide = (currentSlide + 1) % slides.length;
        showSlide(currentSlide);
      }
      
      // Cambiar slide cada 3 segundos
      if (slides.length > 1) {
        setInterval(nextSlide, 3000);
        showSlide(0);
      }
    }
    
    // Slider de subtítulos para móvil - Nueva estructura de columnas
    const subtitleSlider = document.querySelector('.subtitle-slider-mobile');
    if (subtitleSlider) {
      // Verificar si estamos en móvil
      function isMobile() {
        return window.innerWidth <= 1023;
      }
      
      let isShowingLeft = true; // true = izquierda (subtitle), false = derecha (support-text)
      let subtitleInterval: ReturnType<typeof setInterval> | null = null;
      
      function showSubtitleColumn(side: 'left' | 'right') {
        if (subtitleSlider) {
          (subtitleSlider as HTMLElement).setAttribute('data-slide', side);
          isShowingLeft = (side === 'left');
        }
      }
      
      function nextSubtitleSlide() {
        if (!isMobile()) {
          return;
        }
        // Alternar entre izquierda y derecha
        showSubtitleColumn(isShowingLeft ? 'right' : 'left');
      }
      
      function startSubtitleSlider() {
        // Limpiar intervalo anterior si existe
        if (subtitleInterval) {
          clearInterval(subtitleInterval);
          subtitleInterval = null;
        }
        
        if (isMobile()) {
          const sliderContainer = document.querySelector('.subtitle-slider-mobile');
          const desktopContent = document.querySelector('.subtitle-content-desktop');
          
          if (sliderContainer) {
            (sliderContainer as HTMLElement).style.display = 'block';
          }
          if (desktopContent) {
            (desktopContent as HTMLElement).style.display = 'none';
          }
          
          // Mostrar la columna izquierda primero (subtitle)
          showSubtitleColumn('left');
          
          // Cambiar cada 4 segundos
          subtitleInterval = setInterval(nextSubtitleSlide, 4000);
        } else {
          // En desktop, ocultar slider y mostrar contenido
          const sliderContainer = document.querySelector('.subtitle-slider-mobile');
          const desktopContent = document.querySelector('.subtitle-content-desktop');
          if (sliderContainer) {
            (sliderContainer as HTMLElement).style.display = 'none';
          }
          if (desktopContent) {
            (desktopContent as HTMLElement).style.display = 'block';
          }
        }
      }
      
      // Iniciar slider inmediatamente
      startSubtitleSlider();
      
      // Reiniciar slider al cambiar tamaño de ventana
      let resizeTimeout: ReturnType<typeof setTimeout>;
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(() => {
          startSubtitleSlider();
        }, 100);
      });
    }
    
  });
</script>

