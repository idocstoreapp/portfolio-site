---
const currentPath = Astro.url.pathname;
---

<header class="header-premium">
  <nav class="header-nav">
    <div class="header-content">
      <!-- Logo/Brand -->
      <a href="/" class="header-logo">
        <img src="/images/logo.png" alt="Maestro Digital" class="logo-image" />
      </a>

      <!-- Navigation Links -->
      <div class="header-nav-links">
        <a 
          href="/" 
          class={`nav-link ${currentPath === '/' ? 'nav-link-active' : ''}`}
        >
          Inicio
        </a>
        <div class="nav-dropdown">
          <a 
            href="/soluciones/restaurantes" 
            class={`nav-link ${currentPath.startsWith('/soluciones') ? 'nav-link-active' : ''}`}
          >
            Soluciones
          </a>
          <div class="dropdown-menu">
            <a href="/soluciones/restaurantes" class="dropdown-link">Restaurantes</a>
            <a href="/soluciones/servicio-tecnico" class="dropdown-link">Servicio Técnico</a>
            <a href="/soluciones/taller-mecanico" class="dropdown-link">Taller Mecánico</a>
            <a href="/soluciones/cotizador-fabrica" class="dropdown-link">Cotizador / Fábrica</a>
            <a href="/soluciones/desarrollo-web" class="dropdown-link">Desarrollo Web</a>
          </div>
        </div>
        <a 
          href="/projects" 
          class={`nav-link ${currentPath === '/projects' || currentPath.startsWith('/projects/') ? 'nav-link-active' : ''}`}
        >
          Proyectos
        </a>
        <a 
          href="/sobre-mi" 
          class={`nav-link ${currentPath === '/sobre-mi' ? 'nav-link-active' : ''}`}
        >
          Sobre Mí
        </a>
        <a 
          href="/contacto" 
          class={`nav-link ${currentPath === '/contacto' ? 'nav-link-active' : ''}`}
        >
          Contacto
        </a>
        {currentPath.startsWith('/admin') && (
          <a 
            href="/admin" 
            class={`nav-link ${currentPath === '/admin' || currentPath === '/admin/' ? 'nav-link-active' : ''}`}
          >
            Admin
          </a>
        )}
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button"
        class="mobile-menu-button"
        aria-label="Abrir menú de navegación"
      >
        <svg class="menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="mobile-menu">
      <div class="mobile-menu-content">
        <a 
          href="/" 
          class={`mobile-nav-link ${currentPath === '/' ? 'mobile-nav-link-active' : ''}`}
        >
          Inicio
        </a>
        <a 
          href="/soluciones/restaurantes" 
          class={`mobile-nav-link ${currentPath.startsWith('/soluciones') ? 'mobile-nav-link-active' : ''}`}
        >
          Soluciones
        </a>
        <a 
          href="/soluciones/restaurantes" 
          class="mobile-nav-link mobile-nav-sublink"
        >
          → Restaurantes
        </a>
        <a 
          href="/soluciones/servicio-tecnico" 
          class="mobile-nav-link mobile-nav-sublink"
        >
          → Servicio Técnico
        </a>
        <a 
          href="/soluciones/taller-mecanico" 
          class="mobile-nav-link mobile-nav-sublink"
        >
          → Taller Mecánico
        </a>
        <a 
          href="/soluciones/cotizador-fabrica" 
          class="mobile-nav-link mobile-nav-sublink"
        >
          → Cotizador / Fábrica
        </a>
        <a 
          href="/soluciones/desarrollo-web" 
          class="mobile-nav-link mobile-nav-sublink"
        >
          → Desarrollo Web
        </a>
        <a 
          href="/projects" 
          class={`mobile-nav-link ${currentPath === '/projects' || currentPath.startsWith('/projects/') ? 'mobile-nav-link-active' : ''}`}
        >
          Proyectos
        </a>
        <a 
          href="/sobre-mi" 
          class={`mobile-nav-link ${currentPath === '/sobre-mi' ? 'mobile-nav-link-active' : ''}`}
        >
          Sobre Mí
        </a>
        <a 
          href="/contacto" 
          class={`mobile-nav-link ${currentPath === '/contacto' ? 'mobile-nav-link-active' : ''}`}
        >
          Contacto
        </a>
      </div>
    </div>
  </nav>
</header>

<style>
  .header-premium {
    position: sticky;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 100;
    background: rgba(147, 197, 253, 0.3) !important; /* Azul claro con transparencia para efecto glass */
    backdrop-filter: blur(20px) saturate(180%) !important;
    -webkit-backdrop-filter: blur(20px) saturate(180%) !important;
    border-bottom: 1px solid rgba(59, 130, 246, 0.2);
    box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.1);
    transition: all var(--norm) var(--ease);
  }
  
  /* Cuando el menú móvil está abierto, asegurar que el header tenga fondo sólido */
  .header-premium:has(.mobile-menu[style*="flex"]) {
    background: rgba(147, 197, 253, 0.4) !important; /* Azul claro más opaco */
    backdrop-filter: blur(20px) saturate(180%) !important;
    -webkit-backdrop-filter: blur(20px) saturate(180%) !important;
  }
  
  .header-premium::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(147, 197, 253, 0.2) 0%,
      rgba(96, 165, 250, 0.15) 50%,
      transparent 100%
    );
    pointer-events: none;
  }
  
  .header-nav {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1rem;
    position: relative;
    z-index: 100;
    width: 100%;
  }
  
  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 0;
  }
  
  @media (min-width: 768px) {
    .header-content {
      padding: 0.5rem 0;
    }
  }
  
  .header-logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    transition: transform var(--fast) var(--ease);
    flex-shrink: 0;
    gap: 0.75rem;
  }
  
  .header-logo:hover {
    transform: translateX(2px);
  }
  
  .logo-image {
    height: 3rem;
    width: auto;
    object-fit: contain;
    transition: transform var(--fast) var(--ease);
  }
  
  @media (min-width: 768px) {
    .logo-image {
      height: 3.5rem;
    }
  }
  
  .header-nav-links {
    display: none;
    align-items: center;
    gap: 1.5rem;
    flex-shrink: 0;
  }
  
  @media (min-width: 768px) {
    .header-nav-links {
      display: flex;
      gap: 1.75rem;
    }
  }
  
  @media (min-width: 1024px) {
    .header-nav-links {
      gap: 2rem;
    }
  }
  
  .nav-link {
    font-size: 0.95rem;
    font-weight: 500;
    color: #1e293b !important; /* Color negro/gris oscuro para mejor contraste con fondo azul claro */
    text-decoration: none;
    padding: 0.5rem 0;
    position: relative;
    transition: color var(--fast) var(--ease);
  }

  .nav-dropdown {
    position: relative;
  }

  .nav-dropdown:hover .dropdown-menu {
    display: block;
  }

  .dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background: white;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    padding: 0.5rem 0;
    margin-top: 0.5rem;
    min-width: 220px;
    z-index: 1000;
  }

  .dropdown-link {
    display: block;
    padding: 0.75rem 1.5rem;
    color: var(--color-graphite-dark, #2B2B2B);
    text-decoration: none;
    font-size: 0.9rem;
    transition: background 0.2s ease;
  }

  .dropdown-link:hover {
    background: var(--color-elephant-white, #F6F5F2);
    color: var(--color-graphite-dark, #2B2B2B);
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #3b82f6, #60a5fa); /* Azul para el subrayado */
    transition: width var(--norm) var(--ease);
  }
  
  .nav-link:hover {
    color: #0f172a !important; /* Negro más oscuro al hover para mejor contraste */
  }
  
  .nav-link:hover::after {
    width: 100%;
  }
  
  .nav-link-active {
    color: #0f172a !important; /* Negro más oscuro para activo */
    font-weight: 600;
  }
  
  .nav-link-active::after {
    width: 100%;
    background: linear-gradient(90deg, #2563eb, #3b82f6); /* Azul más intenso para activo */
  }
  
  .mobile-menu-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: rgba(30, 41, 59, 0.1);
    border: 1px solid rgba(30, 41, 59, 0.2);
    border-radius: var(--radius-md);
    color: #1e293b !important; /* Negro para el icono */
    cursor: pointer;
    transition: all var(--fast) var(--ease);
  }
  
  @media (min-width: 768px) {
    .mobile-menu-button {
      display: none;
    }
  }
  
  .mobile-menu-button:hover {
    background: rgba(30, 41, 59, 0.15);
    border-color: rgba(30, 41, 59, 0.3);
  }
  
  .menu-icon {
    width: 1.5rem;
    height: 1.5rem;
  }
  
  .mobile-menu {
    display: none;
    flex-direction: column;
    padding: 1.5rem 0;
    border-top: 1px solid rgba(59, 130, 246, 0.2);
    background: rgba(147, 197, 253, 0.3) !important; /* Azul claro con efecto glass */
    backdrop-filter: blur(20px) saturate(180%) !important;
    -webkit-backdrop-filter: blur(20px) saturate(180%) !important;
    position: relative;
    z-index: 100;
    margin-top: 0;
    box-shadow: 0 4px 20px rgba(59, 130, 246, 0.2);
  }
  
  @media (min-width: 768px) {
    .mobile-menu {
      display: none !important;
    }
  }
  
  .mobile-menu-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .mobile-nav-link {
    font-size: 1rem;
    font-weight: 500;
    color: #1e293b !important; /* Color negro/gris oscuro para mejor contraste */
    text-decoration: none;
    padding: 0.75rem 0;
    transition: color var(--fast) var(--ease);
    border-bottom: 1px solid rgba(59, 130, 246, 0.1);
  }
  
  .mobile-nav-link:hover {
    color: #0f172a !important; /* Negro más oscuro al hover */
  }
  
  .mobile-nav-link-active {
    color: #0f172a !important; /* Negro más oscuro para activo */
    font-weight: 600;
  }

  .mobile-nav-sublink {
    padding-left: 2.5rem;
    font-size: 0.9rem;
    color: #334155 !important; /* Gris oscuro para sublinks */
  }

  .mobile-nav-sublink:hover {
    color: #0f172a !important; /* Negro más oscuro al hover */
  }
</style>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        const isVisible = mobileMenu.style.display === 'flex' || !mobileMenu.style.display;
        
        if (!isVisible || mobileMenu.style.display === 'none') {
          mobileMenu.style.display = 'flex';
          mobileMenuButton.setAttribute('aria-label', 'Cerrar menú de navegación');
          // Change icon to X
          mobileMenuButton.innerHTML = `
            <svg class="menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          `;
        } else {
          mobileMenu.style.display = 'none';
          mobileMenuButton.setAttribute('aria-label', 'Abrir menú de navegación');
          // Change icon back to hamburger
          mobileMenuButton.innerHTML = `
            <svg class="menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          `;
        }
      });
    }
  });
</script>



