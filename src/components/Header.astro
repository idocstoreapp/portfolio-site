---
const currentPath = Astro.url.pathname;
---

<header class="header-premium">
  <nav class="header-nav">
    <div class="header-content">
      <!-- Logo/Brand -->
      <a href="/" class="header-logo">
        <img src="/images/logo.png" alt="Maestro Digital" class="logo-image" />
      </a>

      <!-- Navigation Links -->
      <div class="header-nav-links">
        <a 
          href="/" 
          class={`nav-link ${currentPath === '/' ? 'nav-link-active' : ''}`}
        >
          Inicio
        </a>
        <a 
          href="/servicios" 
          class={`nav-link ${currentPath === '/servicios' ? 'nav-link-active' : ''}`}
        >
          Servicios
        </a>
        <a 
          href="/projects" 
          class={`nav-link ${currentPath === '/projects' || currentPath.startsWith('/projects/') ? 'nav-link-active' : ''}`}
        >
          Proyectos
        </a>
        <a 
          href="/sobre-mi" 
          class={`nav-link ${currentPath === '/sobre-mi' ? 'nav-link-active' : ''}`}
        >
          Sobre Mí
        </a>
        <a 
          href="/contacto" 
          class={`nav-link ${currentPath === '/contacto' ? 'nav-link-active' : ''}`}
        >
          Contacto
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button"
        class="mobile-menu-button"
        aria-label="Abrir menú de navegación"
      >
        <svg class="menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="mobile-menu">
      <div class="mobile-menu-content">
        <a 
          href="/" 
          class={`mobile-nav-link ${currentPath === '/' ? 'mobile-nav-link-active' : ''}`}
        >
          Inicio
        </a>
        <a 
          href="/servicios" 
          class={`mobile-nav-link ${currentPath === '/servicios' ? 'mobile-nav-link-active' : ''}`}
        >
          Servicios
        </a>
        <a 
          href="/projects" 
          class={`mobile-nav-link ${currentPath === '/projects' || currentPath.startsWith('/projects/') ? 'mobile-nav-link-active' : ''}`}
        >
          Proyectos
        </a>
        <a 
          href="/sobre-mi" 
          class={`mobile-nav-link ${currentPath === '/sobre-mi' ? 'mobile-nav-link-active' : ''}`}
        >
          Sobre Mí
        </a>
        <a 
          href="/contacto" 
          class={`mobile-nav-link ${currentPath === '/contacto' ? 'mobile-nav-link-active' : ''}`}
        >
          Contacto
        </a>
      </div>
    </div>
  </nav>
</header>

<style>
  .header-premium {
    position: sticky;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 100;
    background: rgba(229, 229, 227, 0.9); /* Gris claro (#E5E5E3) más claro */
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(154, 154, 151, 0.2);
    transition: all var(--norm) var(--ease);
  }
  
  /* Cuando el menú móvil está abierto, asegurar que el header tenga fondo sólido */
  .header-premium:has(.mobile-menu[style*="flex"]) {
    background: rgba(229, 229, 227, 0.95); /* Gris claro más opaco */
    backdrop-filter: blur(20px);
  }
  
  .header-premium::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(59, 130, 246, 0.1) 0%,
      rgba(99, 102, 241, 0.05) 50%,
      transparent 100%
    );
    pointer-events: none;
  }
  
  .header-nav {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1rem;
    position: relative;
    z-index: 100;
    width: 100%;
  }
  
  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 0;
  }
  
  @media (min-width: 768px) {
    .header-content {
      padding: 0.5rem 0;
    }
  }
  
  .header-logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    transition: transform var(--fast) var(--ease);
    flex-shrink: 0;
    gap: 0.75rem;
  }
  
  .header-logo:hover {
    transform: translateX(2px);
  }
  
  .logo-image {
    height: 3rem;
    width: auto;
    object-fit: contain;
    transition: transform var(--fast) var(--ease);
  }
  
  @media (min-width: 768px) {
    .logo-image {
      height: 3.5rem;
    }
  }
  
  .header-nav-links {
    display: none;
    align-items: center;
    gap: 1.5rem;
    flex-shrink: 0;
  }
  
  @media (min-width: 768px) {
    .header-nav-links {
      display: flex;
      gap: 1.75rem;
    }
  }
  
  @media (min-width: 1024px) {
    .header-nav-links {
      gap: 2rem;
    }
  }
  
  .nav-link {
    font-size: 0.95rem;
    font-weight: 500;
    color: #D4AF37; /* Color dorado */
    text-decoration: none;
    padding: 0.5rem 0;
    position: relative;
    transition: color var(--fast) var(--ease);
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #D4AF37, #F4D03F);
    transition: width var(--norm) var(--ease);
  }
  
  .nav-link:hover {
    color: #F4D03F; /* Dorado más claro al hover */
  }
  
  .nav-link:hover::after {
    width: 100%;
  }
  
  .nav-link-active {
    color: #F4D03F; /* Dorado más claro para activo */
  }
  
  .nav-link-active::after {
    width: 100%;
  }
  
  .mobile-menu-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    cursor: pointer;
    transition: all var(--fast) var(--ease);
  }
  
  @media (min-width: 768px) {
    .mobile-menu-button {
      display: none;
    }
  }
  
  .mobile-menu-button:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
  }
  
  .menu-icon {
    width: 1.5rem;
    height: 1.5rem;
  }
  
  .mobile-menu {
    display: none;
    flex-direction: column;
    padding: 1.5rem 0;
    border-top: 1px solid rgba(59, 130, 246, 0.2);
    background: rgba(15, 23, 42, 0.95);
    backdrop-filter: blur(20px);
    position: relative;
    z-index: 100;
    margin-top: 0;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
  }
  
  @media (min-width: 768px) {
    .mobile-menu {
      display: none !important;
    }
  }
  
  .mobile-menu-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .mobile-nav-link {
    font-size: 1rem;
    font-weight: 500;
    color: #D4AF37; /* Color dorado */
    text-decoration: none;
    padding: 0.75rem 0;
    transition: color var(--fast) var(--ease);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  .mobile-nav-link:hover {
    color: #F4D03F; /* Dorado más claro al hover */
  }
  
  .mobile-nav-link-active {
    color: #F4D03F; /* Dorado más claro para activo */
  }
</style>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        const isVisible = mobileMenu.style.display === 'flex' || !mobileMenu.style.display;
        
        if (!isVisible || mobileMenu.style.display === 'none') {
          mobileMenu.style.display = 'flex';
          mobileMenuButton.setAttribute('aria-label', 'Cerrar menú de navegación');
          // Change icon to X
          mobileMenuButton.innerHTML = `
            <svg class="menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          `;
        } else {
          mobileMenu.style.display = 'none';
          mobileMenuButton.setAttribute('aria-label', 'Abrir menú de navegación');
          // Change icon back to hamburger
          mobileMenuButton.innerHTML = `
            <svg class="menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          `;
        }
      });
    }
  });
</script>



