          solution=""
          result=""
          icon="üìÑ"
        />
        <SuccessCaseCard
          title="La Soluci√≥n"
          problem=""
          solution={projectData.solution}
          result=""
          icon="üí°"
        />
        <SuccessCaseCard
          title="El Resultado"
          problem=""
          solution=""
          result={projectData.result}
          icon="‚úÖ"
        />
      </div>
    </div>
  </section>

  <!-- Client Testimonial -->
