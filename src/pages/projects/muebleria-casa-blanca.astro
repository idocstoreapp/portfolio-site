---
import Layout from "../../layouts/Layout.astro";
import HeroPremium from "../../components/HeroPremium.astro";
import SuccessCaseCard from "../../components/SuccessCaseCard.astro";
import TestimonialCardPremium from "../../components/TestimonialCardPremium.astro";

const projectData = {
  title: "Muebler√≠a Casa Blanca",
  description: "Sitio web moderno y profesional para Muebler√≠a Casa Blanca, enfocado en conversi√≥n y experiencia de usuario.",
  mockup: "/images/webs/mobiliario.png",
  liveUrl: "https://mueblericacasablanca.cl",
  githubUrl: "https://github.com/idocstoreapp/redise-o-muebleriacasablanca",
  problem: "Necesidad de presencia digital moderna y profesional para mostrar cat√°logo de muebles y facilitar contacto con clientes.",
  solution: "Sitio web responsive con dise√±o premium, cat√°logo organizado, sistema de contacto integrado y optimizado para conversi√≥n.",
  result: "Aumento significativo en consultas y contacto con clientes, mejor experiencia de usuario y profesionalismo de marca.",
  testimonial: {
    name: "Equipo Muebler√≠a Casa Blanca",
    role: "Propietarios",
    company: "Muebler√≠a Casa Blanca",
    rating: 5,
    text: "El nuevo sitio web super√≥ nuestras expectativas. Ahora nuestros clientes pueden ver nuestros productos de manera profesional y contactarnos f√°cilmente. El dise√±o es moderno y la experiencia es excelente.",
    avatar: "üè™"
  },
  stack: ["Astro", "React", "Tailwind CSS", "TypeScript"]
};
---

<Layout 
  title={`${projectData.title} | Desarrollo Web | Jonathan Guarirapa`}
  description={projectData.description}
  image={projectData.mockup}
>
  <!-- Hero Section with Mockup - Similar to Index -->
  <section class="project-hero-premium">
    <div class="project-hero-container">
      <div class="project-hero-content">
        <!-- Mockup Image -->
        <div class="project-hero-mockup">
          <img 
            src={projectData.mockup} 
            alt={`Mockup de ${projectData.title}`}
            class="project-mockup-image"
            loading="eager"
          />
        </div>
        
        <!-- Text Content -->
        <div class="project-hero-text">
          <h1 class="project-hero-title">
            {projectData.title}
          </h1>
          
          <p class="project-hero-description">
            {projectData.description}
          </p>
          
          <!-- CTA Buttons -->
          <div class="project-hero-cta">
            <a href={projectData.liveUrl} target="_blank" rel="noopener noreferrer" class="btn-primary-small">
              Ver en Vivo
              <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
            <a href={projectData.githubUrl} target="_blank" rel="noopener noreferrer" class="btn-secondary-small">
              Ver C√≥digo
              <svg fill="currentColor" viewBox="0 0 24 24" class="btn-icon">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path>
              </svg>
            </a>
          </div>
          
          <!-- Rating -->
          <div class="project-hero-rating">
            <span class="star">‚≠ê</span>
            <span class="star">‚≠ê</span>
            <span class="star">‚≠ê</span>
            <span class="star">‚≠ê</span>
            <span class="star">‚≠ê</span>
            <span class="rating-score">4.9/5.0</span>
            <span class="rating-separator">‚Ä¢</span>
            <span class="rating-count">250+ Rese√±as en Google</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Problem ‚Üí Solution ‚Üí Result -->
  <section class="section-spacing bg-gradient-dark">
    <div class="container">
      <h2 class="section-title text-center mb-12">El Proceso</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <SuccessCaseCard
          title="El Problema"
          problem={projectData.problem}
          solution=""
          result=""
          icon="üìÑ"
        />
        <SuccessCaseCard
          title="La Soluci√≥n"
          problem=""
          solution={projectData.solution}
          result=""
          icon="üí°"
        />
        <SuccessCaseCard
          title="El Resultado"
          problem=""
          solution=""
          result={projectData.result}
          icon="‚úÖ"
        />
      </div>
    </div>
  </section>

  <!-- Client Testimonial -->
  <section class="section-spacing bg-gradient-darker">
    <div class="container">
      <h2 class="section-title text-center mb-12">Rese√±a del Cliente</h2>
      <div class="max-w-3xl mx-auto">
        <TestimonialCardPremium
          name={projectData.testimonial.name}
          role={projectData.testimonial.role}
          company={projectData.testimonial.company}
          rating={projectData.testimonial.rating}
          text={projectData.testimonial.text}
          avatar={projectData.testimonial.avatar}
          projectCover={projectData.mockup}
        />
      </div>
    </div>
  </section>

  <!-- Tech Stack -->
  <section class="section-spacing bg-gradient-dark">
    <div class="container">
      <h2 class="section-title text-center mb-8">Tecnolog√≠as Utilizadas</h2>
      <div class="flex flex-wrap justify-center gap-4">
        {projectData.stack.map((tech) => (
          <span class="tech-badge">
            {tech}
          </span>
        ))}
      </div>
    </div>
  </section>

  <!-- Back to Projects -->
  <section class="section-spacing text-center bg-gradient-darker">
    <div class="container">
      <a href="/projects" class="btn-back">
        ‚Üê Volver a Proyectos
      </a>
    </div>
  </section>

  <style>
    .project-hero-premium {
      position: relative;
      min-height: 80vh;
      display: flex;
      align-items: flex-start;
      padding: 2rem 1rem 4rem 1rem;
      overflow: hidden;
      background: var(--bg-primary);
    }

    @media (min-width: 320px) and (max-width: 767px) {
      .project-hero-premium {
        padding: 1rem 0.5rem 2rem 0.5rem;
      }
    }

    .project-hero-container {
      position: relative;
      z-index: 1;
      max-width: 1400px;
      margin: 0 auto;
      width: 100%;
      padding: 0 1rem;
    }

    @media (min-width: 320px) and (max-width: 1023px) {
      .project-hero-container {
        padding: 0 0.5rem 0 0;
      }
    }

    .project-hero-content {
      display: grid;
      grid-template-columns: 1fr auto;
      grid-template-rows: auto 1fr;
      gap: 1rem 1rem;
      align-items: start;
    }

    /* Mobile: Mockup a la izquierda, t√≠tulo a la derecha */
    @media (min-width: 320px) and (max-width: 1023px) {
      .project-hero-content {
        display: grid;
        grid-template-columns: auto 1fr;
        grid-template-rows: auto 1fr;
        gap: 0.75rem 0;
        align-items: start;
      }
      
      .project-hero-mockup {
        grid-column: 1;
        grid-row: 1;
        display: flex;
        align-items: flex-start;
        justify-content: flex-start;
        flex-shrink: 0;
        margin-top: -6rem;
        min-width: fit-content;
        padding-right: 0.75rem;
      }
      
      .project-mockup-image {
        width: 100%;
        height: auto;
        object-fit: contain;
        max-width: 200px;
      }
      
      @media (min-width: 480px) {
        .project-mockup-image {
          max-width: 260px;
        }
      }
      
      @media (min-width: 768px) {
        .project-mockup-image {
          max-width: 400px;
        }
      }
      
      .project-hero-text {
        grid-column: 2;
        grid-row: 1;
        display: contents;
      }
      
      .project-hero-title {
        grid-column: 2;
        grid-row: 1;
        margin-bottom: 0;
        margin-left: -1rem !important;
        margin-right: 0;
        padding-left: 0;
        padding-right: 0.5rem;
        align-self: start;
        text-align: right !important;
        font-size: clamp(1.5rem, 6vw, 2rem);
        line-height: 1.8;
        max-width: none;
        width: 100%;
        overflow: visible;
        display: block;
        font-weight: 800;
        color: var(--text-primary);
        font-family: var(--font-heading);
      }
      
      .project-hero-description {
        grid-column: 2;
        grid-row: 2;
        margin-top: 0.5rem;
        margin-left: -1rem !important;
        padding-left: 0;
        padding-right: 0.5rem;
        text-align: right !important;
        font-size: clamp(0.7rem, 2.5vw, 0.9rem);
        line-height: 1.4;
        max-width: 100% !important;
        color: var(--text-secondary);
      }
      
      .project-hero-cta {
        grid-column: 2;
        grid-row: 3;
        margin-top: 0.5rem;
        margin-left: -1rem !important;
        padding-left: 0;
        padding-right: 0.5rem;
        display: flex;
        justify-content: flex-end;
        gap: 0.5rem;
        flex-wrap: nowrap;
        align-items: center;
      }
      
      .project-hero-rating {
        grid-column: 1 / -1;
        grid-row: 4;
        margin-top: 0.5rem;
        margin-left: 0 !important;
        padding-left: 0.5rem !important;
        padding-right: 0.5rem;
        display: flex !important;
        align-items: center;
        justify-content: flex-start !important;
        gap: 0;
        font-size: 0.65rem;
        flex-wrap: nowrap !important;
        width: 100%;
        box-sizing: border-box;
      }
      
      .project-hero-rating .star {
        font-size: 1rem !important;
        flex-shrink: 0;
        margin: 0;
        margin-right: -0.3rem !important;
        filter: grayscale(100%) brightness(2);
        opacity: 0.9;
      }
      
      .project-hero-rating .star:last-of-type {
        margin-right: 0.3rem !important;
      }
      
      .project-hero-rating .rating-score,
      .project-hero-rating .rating-separator,
      .project-hero-rating .rating-count {
        flex-shrink: 0;
        white-space: nowrap;
        font-size: 0.65rem;
      }
    }
    
    @media (min-width: 1024px) {
      .project-hero-content {
        grid-template-columns: 1fr 1fr;
        gap: 6rem;
        align-items: center;
      }
      
      .project-hero-mockup {
        order: 1;
      }
      
      .project-hero-text {
        display: flex;
        flex-direction: column;
        order: 2;
        gap: 1.5rem;
      }
      
      .project-hero-title {
        font-size: clamp(2.5rem, 5vw, 4.5rem);
        font-weight: 800;
        line-height: 1.1;
        color: var(--text-primary);
        letter-spacing: -0.03em;
        text-align: left;
        margin: 0;
        font-family: var(--font-heading);
      }
      
      .project-hero-description {
        font-size: clamp(1.125rem, 2vw, 1.5rem);
        color: var(--text-secondary);
        line-height: 1.6;
        max-width: 600px;
        margin: 0;
        text-align: left;
      }
      
      .project-hero-cta {
        display: flex;
        gap: 1rem;
        justify-content: flex-start;
        flex-wrap: wrap;
      }
      
      .project-hero-rating {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: var(--text-secondary);
      }
      
      .project-hero-rating .star {
        font-size: 1.25rem;
        filter: grayscale(100%) brightness(2);
        opacity: 0.9;
        margin-right: 0.2rem;
      }
      
      .project-hero-rating .star:last-of-type {
        margin-right: 0;
      }
      
      .project-mockup-image {
        width: 100%;
        max-width: 700px;
        height: auto;
        object-fit: contain;
      }
    }

    .project-hero-mockup {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .btn-primary-small,
    .btn-secondary-small {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.6rem 0.9rem;
      border-radius: var(--radius-md);
      font-weight: 600;
      font-size: 0.75rem;
      text-decoration: none;
      transition: all var(--norm) var(--ease);
      white-space: nowrap;
    }

    .btn-primary-small {
      background: var(--grad-primary);
      color: var(--bg-primary);
      border: none;
    }

    .btn-primary-small:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-glow-primary);
    }

    .btn-secondary-small {
      background: rgba(255, 255, 255, 0.05);
      color: var(--text-primary);
      border: 1px solid rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
    }

    .btn-secondary-small:hover {
      background: rgba(255, 255, 255, 0.1);
      border-color: rgba(255, 255, 255, 0.2);
      transform: translateY(-2px);
    }

    .btn-icon {
      width: 1.25rem;
      height: 1.25rem;
    }

    .tech-badge {
      padding: 0.5rem 1rem;
      background: rgba(88, 101, 242, 0.15);
      color: var(--accent-primary);
      border-radius: var(--radius-full);
      font-size: 0.875rem;
      font-weight: 600;
      border: 1px solid rgba(88, 101, 242, 0.3);
    }

    .section-spacing {
      padding: 4rem 0;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 1rem;
    }

    .section-title {
      font-size: clamp(2rem, 4vw, 2.5rem);
      font-weight: 800;
      color: var(--text-primary);
      font-family: var(--font-heading);
    }

    .btn-back {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 1rem 2rem;
      background: rgba(255, 255, 255, 0.1);
      color: var(--text-primary);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: var(--radius-md);
      font-weight: 600;
      text-decoration: none;
      transition: all var(--norm) var(--ease);
      font-size: 1.1rem;
    }

    .btn-back:hover {
      background: rgba(255, 255, 255, 0.2);
      transform: translateY(-2px);
    }
  </style>
</Layout>

