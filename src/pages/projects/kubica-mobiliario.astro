---
import Layout from "../../layouts/Layout.astro";
import ProjectHero from "../../components/ProjectHero.astro";
import SuccessCaseCard from "../../components/SuccessCaseCard.astro";
import TestimonialCardPremium from "../../components/TestimonialCardPremium.astro";

const projectData = {
  title: ["Kubica", "Mobiliario"],
  description: "Sitio web moderno para Kubica Mobiliario, especializado en mobiliario contempor√°neo y dise√±o de interiores.",
  mockup: "/images/webs/mobiliario.png",
  liveUrl: "https://kubicamobiliario.cl",
  githubUrl: "https://github.com/idocstoreapp/nuevo-proyecto",
  problem: "Necesidad de un sitio web profesional para mostrar el cat√°logo de mobiliario contempor√°neo y atraer clientes interesados en dise√±o de interiores.",
  solution: "Plataforma web elegante con galer√≠a visual de productos, informaci√≥n detallada y sistema de contacto para cotizaciones.",
  result: "Mejora en la presentaci√≥n profesional de la marca, aumento en consultas de clientes y mejor posicionamiento digital.",
  testimonial: {
    name: "Equipo Kubica Mobiliario",
    role: "Fundadores",
    company: "Kubica Mobiliario",
    rating: 5,
    text: "El sitio web refleja perfectamente la calidad de nuestros productos. El dise√±o es moderno y elegante, y nuestros clientes pueden navegar f√°cilmente por nuestro cat√°logo. Excelente trabajo profesional.",
    avatar: "ü™ë"
  },
  stack: ["Astro", "React", "Tailwind CSS", "TypeScript"]
};
---

<Layout 
  title={`${projectData.title.join(' ')} | Desarrollo Web | Jonathan Guarirapa`}
  description={projectData.description}
  image={projectData.mockup}
>
  <ProjectHero
    title={projectData.title}
    description={projectData.description}
    mockup={projectData.mockup}
    liveUrl={projectData.liveUrl}
    githubUrl={projectData.githubUrl}
  />

  <!-- Problem ‚Üí Solution ‚Üí Result -->
  <section class="section-spacing bg-gradient-dark">
    <div class="container">
      <h2 class="section-title text-center mb-12">El Proceso</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <SuccessCaseCard
          title="El Problema"
          problem={projectData.problem}
          solution=""
          result=""
          icon="üìÑ"
        />
        <SuccessCaseCard
          title="La Soluci√≥n"
          problem=""
          solution={projectData.solution}
          result=""
          icon="üí°"
        />
        <SuccessCaseCard
          title="El Resultado"
          problem=""
          solution=""
          result={projectData.result}
          icon="‚úÖ"
        />
      </div>
    </div>
  </section>

  <!-- Client Testimonial -->
  <section class="section-spacing bg-gradient-darker">
    <div class="container">
      <h2 class="section-title text-center mb-12">Rese√±a del Cliente</h2>
      <div class="max-w-3xl mx-auto">
        <TestimonialCardPremium
          name={projectData.testimonial.name}
          role={projectData.testimonial.role}
          company={projectData.testimonial.company}
          rating={projectData.testimonial.rating}
          text={projectData.testimonial.text}
          avatar={projectData.testimonial.avatar}
          projectCover={projectData.mockup}
        />
      </div>
    </div>
  </section>

  <!-- Tech Stack -->
  <section class="section-spacing bg-gradient-dark">
    <div class="container">
      <h2 class="section-title text-center mb-8">Tecnolog√≠as Utilizadas</h2>
      <div class="flex flex-wrap justify-center gap-4">
        {projectData.stack.map((tech) => (
          <span class="tech-badge">
            {tech}
          </span>
        ))}
      </div>
    </div>
  </section>

  <!-- Back to Projects -->
  <section class="section-spacing text-center bg-gradient-darker">
    <div class="container">
      <a href="/projects" class="btn-back">
        ‚Üê Volver a Proyectos
      </a>
    </div>
  </section>

  <style>
    .tech-badge {
      padding: 0.5rem 1rem;
      background: rgba(88, 101, 242, 0.15);
      color: var(--accent-primary);
      border-radius: var(--radius-full);
      font-size: 0.875rem;
      font-weight: 600;
      border: 1px solid rgba(88, 101, 242, 0.3);
    }

    .section-spacing {
      padding: 4rem 0;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 1rem;
    }

    .section-title {
      font-size: clamp(2rem, 4vw, 2.5rem);
      font-weight: 700;
      color: var(--color-graphite-dark, #2B2B2B);
      font-family: 'Libre Baskerville', serif; /* Misma fuente que el hero */
    }
    
    .bg-gradient-dark .section-title,
    .bg-gradient-darker .section-title {
      color: var(--color-graphite-dark, #2B2B2B) !important;
    }

    .btn-back {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 1rem 2rem;
      background: rgba(255, 255, 255, 0.1);
      color: var(--text-primary);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: var(--radius-md);
      font-weight: 600;
      text-decoration: none;
      transition: all var(--norm) var(--ease);
      font-size: 1.1rem;
    }

    .btn-back:hover {
      background: rgba(255, 255, 255, 0.2);
      transform: translateY(-2px);
    }
  </style>
</Layout>

