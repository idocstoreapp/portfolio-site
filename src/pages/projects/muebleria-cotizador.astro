  <style>
    .project-hero-premium {
      position: relative;
      height: 100vh;
      display: flex;
      align-items: center;
      padding: 4rem 1rem;
      overflow: hidden;
      background: var(--bg-primary);
    }

    /* Mobile: altura autom√°tica, m√°ximo 50vh */
    @media (min-width: 320px) and (max-width: 1023px) {
      .project-hero-premium {
        height: auto;
        min-height: auto;
        max-height: 50vh;
        align-items: flex-start;
        padding: 0.5rem 1rem 1rem;
        padding-top: 5rem;
        overflow: visible;
      }
    }

    @media (min-width: 1024px) {
      .project-hero-premium {
        height: 100vh;
        padding: 1rem 1rem 3rem;
        align-items: flex-start;
        padding-top: 0.5rem;
      }
    }
    
    .section-spacing {
      padding-top: 6rem;
    }

    .project-hero-container {
      position: relative;
      z-index: 1;
      max-width: 1400px;
      margin: 0 auto;
      width: 100%;
      padding: 0 1rem;
      height: 100%;
      display: flex;
      align-items: center;
    }

    @media (min-width: 320px) and (max-width: 1023px) {
      .project-hero-container {
        padding: 0 0.5rem 0 0;
        height: auto;
        align-items: flex-start;
        padding-top: 0;
      }
    }

    @media (min-width: 1024px) {
      .project-hero-container {
        align-items: flex-start;
        padding-top: 1rem;
      }
    }

    .project-hero-content {
      display: grid;
      grid-template-columns: 1fr auto;
      grid-template-rows: auto 1fr;
      gap: 1rem 1rem;
      align-items: start;
    }

    /* Mobile: Mockup a la izquierda, t√≠tulo a la derecha */
    @media (min-width: 320px) and (max-width: 1023px) {
      .project-hero-content {
        display: grid;
        grid-template-columns: auto 1fr;
        grid-template-rows: auto 1fr;
        gap: 0.75rem 0;
        align-items: start;
      }
      
      .project-hero-mockup {
        grid-column: 1;
        grid-row: 1;
        display: flex;
        align-items: flex-start;
        justify-content: flex-start;
        flex-shrink: 0;
        margin-top: -3rem;
        min-width: fit-content;
        padding-right: 0.75rem;
      }
      
      .project-mockup-image {
        width: 130% !important;
        height: auto;
        object-fit: contain;
        max-width: 350px !important;
      }
      
      @media (min-width: 480px) {
        .project-mockup-image {
          max-width: 450px !important;
        }
      }
      
      @media (min-width: 768px) {
        .project-mockup-image {
          max-width: 600px !important;
        }
      }
      
      .project-hero-text {
        grid-column: 2;
        grid-row: 1;
        display: contents;
      }
      
      .project-hero-title {
        grid-column: 2;
        grid-row: 1;
        margin-bottom: 0;
        margin-top: 8rem !important;
        margin-left: -1rem !important;
        margin-right: 0;
        padding-left: 0;
        padding-right: 0.5rem;
        padding-top: 0;
        align-self: start;
        text-align: right !important;
        font-size: clamp(1.5rem, 6vw, 2rem);
        line-height: 1.8;
        max-width: none;
        width: 100%;
        overflow: visible;
        display: flex;
        flex-direction: column;
        gap: 0;
        font-weight: 800;
        color: var(--text-primary);
        font-family: var(--font-heading);
      }
      
      .project-hero-title .title-line {
        display: block;
        line-height: 1.8;
      }
      
      .project-hero-description {
        grid-column: 2;
        grid-row: 1;
        margin-top: calc(12rem + 20px) !important;
        margin-bottom: 0;
        margin-left: -1rem !important;
        margin-right: 0;
        padding-left: 0;
        padding-right: 0.5rem;
        text-align: right !important;
        font-size: clamp(0.7rem, 2.5vw, 0.9rem);
        line-height: 1.4;
        max-width: 100% !important;
        color: var(--text-secondary);
      }
      
      .project-hero-cta {
        grid-column: 2;
        grid-row: 1;
        margin-top: 20rem !important;
        margin-bottom: 0;
        margin-left: -1rem !important;
        padding-left: 0;
        padding-right: 0.5rem;
        display: flex;
        justify-content: flex-end;
        gap: 0.5rem;
        flex-wrap: nowrap;
        align-items: center;
      }
      
      .project-hero-rating {
        grid-column: 2;
        grid-row: 1;
        margin-top: calc(20rem + 4rem) !important;
        margin-bottom: 0.5rem;
        margin-left: -1rem !important;
        padding-left: 0 !important;
        padding-right: 0.5rem;
        display: flex !important;
        align-items: center;
        justify-content: flex-end !important;
        gap: 0;
        font-size: 0.65rem;
        flex-wrap: nowrap !important;
        width: 100%;
        box-sizing: border-box;
      }
      
      .project-hero-rating .star {
        font-size: 1rem !important;
        flex-shrink: 0;
        margin: 0;
        margin-right: -0.3rem !important;
        filter: grayscale(100%) brightness(2);
        opacity: 0.9;
      }
      
      .project-hero-rating .star:last-of-type {
        margin-right: 0.3rem !important;
      }
      
      .project-hero-rating .rating-score,
      .project-hero-rating .rating-separator,
      .project-hero-rating .rating-count {
        flex-shrink: 0;
        white-space: nowrap;
        font-size: 0.65rem;
      }
    }
    
    @media (min-width: 1024px) {
      .project-hero-content {
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: flex-start;
        margin-top: 0;
      }
      
      .project-hero-mockup {
        order: 1;
        align-items: flex-start;
        justify-content: flex-start;
        padding-top: 0;
        margin-top: -12rem;
        transform: translateY(-2rem);
      }
      
      .project-hero-text {
        display: flex;
        flex-direction: column;
        order: 2;
        justify-content: flex-start;
        padding-top: 5rem;
        gap: 2rem;
      }
      
      .project-hero-title {
        font-size: clamp(2.5rem, 6vw, 4.5rem);
        font-weight: 800;
        line-height: 1.1;
        color: var(--text-primary);
        letter-spacing: -0.03em;
        text-align: left;
        margin: 0;
        margin-top: 2rem;
        font-family: var(--font-heading);
      }
      
      .project-hero-description {
        font-size: clamp(1.125rem, 2vw, 1.5rem);
        color: var(--text-secondary);
        line-height: 1.6;
        max-width: 600px;
        margin: 0;
        margin-top: 1rem;
        text-align: left;
      }
      
      .project-hero-cta {
        display: flex;
        gap: 1rem;
        justify-content: flex-start;
        flex-wrap: wrap;
        margin-top: 0.5rem;
      }
      
      .project-hero-rating {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: var(--text-secondary);
      }
      
      .project-hero-rating .star {
        font-size: 1.25rem;
        filter: grayscale(100%) brightness(2);
        opacity: 0.9;
        margin-right: 0.2rem;
      }
      
      .project-hero-rating .star:last-of-type {
        margin-right: 0;
      }
      
      .project-hero-mockup {
        align-items: flex-start;
        justify-content: flex-start;
      }
      
      .project-mockup-image {
        width: 100%;
        max-width: 800px;
        height: auto;
        object-fit: contain;
      }
    }

    .project-hero-mockup {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .btn-primary-small,
    .btn-secondary-small {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.6rem 0.9rem;
      border-radius: var(--radius-md);
      font-weight: 600;
      font-size: 0.75rem;
      text-decoration: none;
      transition: all var(--norm) var(--ease);
      white-space: nowrap;
    }

    .btn-primary-small {
      background: var(--grad-primary);
      color: var(--bg-primary);
      border: none;
    }

    .btn-primary-small:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-glow-primary);
    }

    .btn-secondary-small {
      background: rgba(255, 255, 255, 0.05);
      color: var(--text-primary);
      border: 1px solid rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
    }

    .btn-secondary-small:hover {
      background: rgba(255, 255, 255, 0.1);
      border-color: rgba(255, 255, 255, 0.2);
      transform: translateY(-2px);
    }

    .btn-icon {
      width: 1.25rem;
      height: 1.25rem;
    }

    /* Carousel Styles */
    .carousel-pc-wrapper,
    .carousel-mobile-wrapper {
      position: relative;
      max-width: 1200px;
      margin: 0 auto;
      overflow: hidden;
      border-radius: var(--radius-lg);
      padding: 0 1rem;
    }

    @media (min-width: 320px) and (max-width: 767px) {
      .carousel-pc-wrapper,
      .carousel-mobile-wrapper {
        padding: 0 0.5rem;
      }
    }

    .carousel-pc-track,
    .carousel-mobile-track {
      display: flex;
      transition: transform 0.5s ease;
      will-change: transform;
    }

    .carousel-pc-slide,
    .carousel-mobile-slide {
      min-width: 100%;
      flex-shrink: 0;
      padding: 0 0.5rem;
    }

    .carousel-pc-image {
      width: 100%;
      height: auto;
      display: block;
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow-xl);
      max-width: 100%;
      object-fit: contain;
    }

    /* PC Images - Responsive sizes adapted for mobile */
    @media (min-width: 320px) and (max-width: 479px) {
      .carousel-pc-image {
        max-width: 100%;
        width: 100%;
      }
    }

    @media (min-width: 480px) and (max-width: 767px) {
      .carousel-pc-image {
        max-width: 100%;
        width: 100%;
      }
    }

    @media (min-width: 768px) and (max-width: 1023px) {
      .carousel-pc-image {
        max-width: 700px;
        margin: 0 auto;
      }
    }

    @media (min-width: 1024px) {
      .carousel-pc-image {
        max-width: 900px;
        margin: 0 auto;
      }
    }

    @media (min-width: 1280px) {
      .carousel-pc-image {
        max-width: 1100px;
      }
    }

    .carousel-mobile-image {
      width: 100%;
      height: auto;
      display: block;
      margin: 0 auto;
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow-xl);
    }

    /* Mobile Images - Responsive sizes */
    @media (min-width: 320px) and (max-width: 479px) {
      .carousel-mobile-image {
        max-width: 200px;
      }
    }

    @media (min-width: 480px) and (max-width: 767px) {
      .carousel-mobile-image {
        max-width: 260px;
      }
    }

    @media (min-width: 768px) and (max-width: 1023px) {
      .carousel-mobile-image {
        max-width: 400px;
      }
    }

    @media (min-width: 1024px) {
      .carousel-mobile-image {
        max-width: 500px;
      }
    }

    .carousel-nav {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      color: var(--text-primary);
      width: 40px;
      height: 40px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all var(--norm) var(--ease);
      z-index: 10;
      backdrop-filter: blur(10px);
    }

    @media (min-width: 768px) {
      .carousel-nav {
        width: 48px;
        height: 48px;
      }
    }

    .carousel-nav:hover {
      background: rgba(255, 255, 255, 0.2);
      transform: translateY(-50%) scale(1.1);
    }

    .carousel-nav.prev {
      left: 0.5rem;
    }

    @media (min-width: 768px) {
      .carousel-nav.prev {
        left: 1rem;
      }
    }

    .carousel-nav.next {
      right: 0.5rem;
    }

    @media (min-width: 768px) {
      .carousel-nav.next {
        right: 1rem;
      }
    }

    .carousel-nav svg {
      width: 20px;
