---

<Layout 
  title={`${projectData.title} | Sistema Administrativo | Jonathan Guarirapa`}
  description={projectData.description}
  image={projectData.mockup}
>
  <!-- Hero Section with Mockup - Similar to Index -->
  <section class="project-hero-premium">
    <div class="project-hero-container">
      <div class="project-hero-content">
        <!-- Mockup Image -->
        <div class="project-hero-mockup">
          <img 
            src={projectData.mockup} 
            alt={`Mockup de ${projectData.title}`}
            class="project-mockup-image"
            loading="eager"
          />
        </div>
        
        <!-- Text Content -->
        <div class="project-hero-text">
          <h1 class="project-hero-title">
            <span class="title-line">Muebler√≠a</span>
            <span class="title-line">Cotizador</span>
          </h1>
          
          <p class="project-hero-description">
            {projectData.description}
          </p>
          
          <!-- CTA Buttons -->
          <div class="project-hero-cta">
            {projectData.liveUrl !== "#" && (
              <a href={projectData.liveUrl} target="_blank" rel="noopener noreferrer" class="btn-primary-small">
                Ver en Vivo
                <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
