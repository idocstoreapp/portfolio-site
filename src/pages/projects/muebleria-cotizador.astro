  "/images/sistemas/cotizadorpc2.PNG",
  "/images/sistemas/cotizadorpc3.PNG",
  "/images/sistemas/cotizadorpc4.PNG"
];

const mobileImages = [
  "/images/sistemas/cotizador1.png",
  "/images/sistemas/cotizador2.png",
  "/images/sistemas/cotizador3.png"
];

const projectData = {
  title: ["Muebler√≠a", "Cotizador"],
  description: "Sistema completo de cotizaciones para muebler√≠a desarrollado con Astro, React, TypeScript y Supabase.",
  mockup: "/images/sistemas/cotizador-hero.png",
  liveUrl: "#",
  githubUrl: "#",
  problem: "Necesidad de gestionar cotizaciones de manera eficiente, calcular materiales y servicios autom√°ticamente, y tener un sistema que permita generar PDFs profesionales de cotizaciones.",
  solution: "Sistema completo con gesti√≥n de materiales y servicios (CRUD), cotizador interactivo con c√°lculos autom√°ticos, generaci√≥n de PDF, dashboard diferenciado por rol (admin/t√©cnico) y validaciones robustas.",
  result: "Mejora significativa en la gesti√≥n de cotizaciones, c√°lculos precisos y autom√°ticos, generaci√≥n r√°pida de PDFs profesionales, mejor organizaci√≥n para administradores y t√©cnicos.",
  testimonial: {
    name: "Equipo de Administraci√≥n",
    role: "Gerentes",
    company: "Muebler√≠a",
    rating: 5,
    text: "El sistema de cotizaciones ha revolucionado nuestro trabajo. Ahora podemos gestionar materiales, servicios y generar cotizaciones profesionales en minutos. Los c√°lculos son autom√°ticos y precisos, y los PDFs se ven incre√≠bles.",
    avatar: "ü™ë"
  },
  stack: ["Astro", "React", "TypeScript", "Tailwind CSS", "Supabase", "React Query", "Zod"]
};
---

<Layout 
  title={`${projectData.title.join(' ')} | Sistema Administrativo | Jonathan Guarirapa`}
  description={projectData.description}
  image={projectData.mockup}
>
  <ProjectHero
    title={projectData.title}
    description={projectData.description}
    mockup={projectData.mockup}
    liveUrl={projectData.liveUrl !== "#" ? projectData.liveUrl : undefined}
    githubUrl={projectData.githubUrl !== "#" ? projectData.githubUrl : undefined}
  />

  <!-- Mobile Images Carousel -->
  <section class="section-spacing bg-gradient-darker">
    <div class="container">
      <h2 class="section-title text-center">Vista M√≥vil</h2>
      <div class="carousel-mobile-wrapper">
        <div class="carousel-mobile-track" id="carousel-mobile">
          {mobileImages.map((img, index) => (
            <div class="carousel-mobile-slide">
              <img src={img} alt={`Captura ${index + 1} - Vista m√≥vil`} class="carousel-mobile-image" />
            </div>
          ))}
        </div>
        <button class="carousel-nav prev" id="carousel-mobile-prev" aria-label="Anterior">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
        </button>
        <button class="carousel-nav next" id="carousel-mobile-next" aria-label="Siguiente">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </button>
        <div class="carousel-indicators" id="carousel-mobile-indicators">
          {mobileImages.map((_, index) => (
            <button class="indicator" data-slide={index} aria-label={`Ir a slide ${index + 1}`}></button>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- PC Images Carousel -->
  <section class="section-spacing bg-gradient-dark">
    <div class="container">
      <h2 class="section-title text-center">Vista de Escritorio</h2>
      <div class="carousel-pc-wrapper">
        <div class="carousel-pc-track" id="carousel-pc">
          {pcImages.map((img, index) => (
            <div class="carousel-pc-slide">
              <img src={img} alt={`Captura ${index + 1} - Vista escritorio`} class="carousel-pc-image" />
            </div>
          ))}
        </div>
        <button class="carousel-nav prev" id="carousel-pc-prev" aria-label="Anterior">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
        </button>
        <button class="carousel-nav next" id="carousel-pc-next" aria-label="Siguiente">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </button>
        <div class="carousel-indicators" id="carousel-pc-indicators">
          {pcImages.map((_, index) => (
            <button class="indicator" data-slide={index} aria-label={`Ir a slide ${index + 1}`}></button>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Problem ‚Üí Solution ‚Üí Result -->
  <section class="section-spacing bg-gradient-dark">
    <div class="container">
      <h2 class="section-title text-center mb-12">El Proceso</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <SuccessCaseCard
          title="El Problema"
          problem={projectData.problem}
          solution=""
          result=""
          icon="üìÑ"
        />
        <SuccessCaseCard
          title="La Soluci√≥n"
          problem=""
          solution={projectData.solution}
          result=""
          icon="üí°"
        />
        <SuccessCaseCard
          title="El Resultado"
          problem=""
          solution=""
          result={projectData.result}
          icon="‚úÖ"
        />
      </div>
    </div>
  </section>

  <!-- Client Testimonial -->
  <section class="section-spacing bg-gradient-darker">
    <div class="container">
      <h2 class="section-title text-center mb-12">Rese√±a del Cliente</h2>
      <div class="flex justify-center">
        <TestimonialCardPremium
          name={projectData.testimonial.name}
          role={projectData.testimonial.role}
          company={projectData.testimonial.company}
          rating={projectData.testimonial.rating}
          text={projectData.testimonial.text}
          avatar={projectData.testimonial.avatar}
        />
      </div>
    </div>
  </section>

  <!-- Tech Stack -->
  <section class="section-spacing bg-gradient-dark">
    <div class="container">
      <h2 class="section-title text-center mb-8">Tecnolog√≠as Utilizadas</h2>
      <div class="flex flex-wrap justify-center gap-4">
        {projectData.stack.map((tech) => (
          <span class="tech-badge">
            {tech}
          </span>
        ))}
      </div>
    </div>
  </section>

  <!-- Back to Projects -->
  <section class="section-spacing text-center bg-gradient-darker">
    <div class="container">
      <a href="/projects" class="btn-back">
        ‚Üê Volver a Proyectos
      </a>
    </div>
  </section>

  <style>
    /* Carousel Styles */
    .carousel-pc-wrapper,
    .carousel-mobile-wrapper {
      position: relative;
      max-width: 1200px;
      margin: 0 auto;
      overflow: visible;
      border-radius: var(--radius-lg);
      padding: 0 1rem;
    }

    @media (min-width: 320px) and (max-width: 767px) {
      .carousel-pc-wrapper {
        padding: 0;
        overflow-x: auto;
        overflow-y: visible;
        -webkit-overflow-scrolling: touch;
        scroll-snap-type: x mandatory;
        scrollbar-width: thin;
      }
      
      .carousel-pc-wrapper::-webkit-scrollbar {
        height: 6px;
      }
      
      .carousel-pc-wrapper::-webkit-scrollbar-track {
        background: rgba(0, 0, 0, 0.1);
        border-radius: 3px;
      }
      
      .carousel-pc-wrapper::-webkit-scrollbar-thumb {
        background: rgba(0, 0, 0, 0.3);
        border-radius: 3px;
      }
      
      .carousel-mobile-wrapper {
        padding: 0 0.5rem;
        overflow: hidden;
      }
    }
    
    @media (min-width: 768px) {
      .carousel-pc-wrapper,
      .carousel-mobile-wrapper {
        overflow: hidden;
      }
    }

    .carousel-pc-track,
    .carousel-mobile-track {
      display: flex;
      transition: transform 0.5s ease;
      will-change: transform;
    }
    
    @media (min-width: 320px) and (max-width: 767px) {
      .carousel-pc-track {
        scroll-snap-type: x mandatory;
        width: max-content;
      }
    }

    .carousel-pc-slide,
    .carousel-mobile-slide {
      min-width: 100%;
      flex-shrink: 0;
      padding: 0 0.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    @media (min-width: 320px) and (max-width: 767px) {
      .carousel-pc-slide {
        scroll-snap-align: start;
        padding: 0 1rem;
        min-width: calc(100vw - 2rem);
        width: auto;
      }
    }

    .carousel-pc-image {
      width: 100%;
      height: auto;
      display: block;
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow-xl);
      object-fit: contain;
      object-position: center;
    }

    /* PC Images - Responsive sizes adapted for mobile */
    @media (min-width: 320px) and (max-width: 479px) {
      .carousel-pc-image {
        max-width: none;
        width: auto;
        max-height: 60vh;
        height: auto;
        object-fit: contain;
        object-position: top center;
      }
    }

    @media (min-width: 480px) and (max-width: 767px) {
      .carousel-pc-image {
        max-width: none;
        width: auto;
        max-height: 65vh;
        height: auto;
        object-fit: contain;
        object-position: top center;
      }
    }

    @media (min-width: 768px) and (max-width: 1023px) {
      .carousel-pc-image {
        max-width: 700px;
        margin: 0 auto;
      }
    }

    @media (min-width: 1024px) {
      .carousel-pc-image {
        max-width: 900px;
        margin: 0 auto;
      }
    }

    @media (min-width: 1280px) {
      .carousel-pc-image {
        max-width: 1100px;
      }
    }

    .carousel-mobile-image {
      width: 100%;
      height: auto;
      display: block;
      margin: 0 auto;
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow-xl);
    }

    /* Mobile Images - Responsive sizes */
    @media (min-width: 320px) and (max-width: 479px) {
      .carousel-mobile-image {
        max-width: 200px;
      }
    }

    @media (min-width: 480px) and (max-width: 767px) {
      .carousel-mobile-image {
        max-width: 260px;
      }
    }

    @media (min-width: 768px) and (max-width: 1023px) {
      .carousel-mobile-image {
        max-width: 400px;
      }
    }

    @media (min-width: 1024px) {
      .carousel-mobile-image {
        max-width: 500px;
      }
    }

    .carousel-nav {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      color: var(--text-primary);
      width: 40px;
      height: 40px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all var(--norm) var(--ease);
      z-index: 10;
      backdrop-filter: blur(10px);
    }

    @media (min-width: 768px) {
      .carousel-nav {
        width: 48px;
        height: 48px;
      }
    }

    .carousel-nav:hover {
      background: rgba(255, 255, 255, 0.2);
      transform: translateY(-50%) scale(1.1);
    }

    .carousel-nav.prev {
      left: 0.5rem;
    }

    @media (min-width: 320px) and (max-width: 767px) {
      .carousel-pc-wrapper .carousel-nav {
        display: none;
      }
    }

    @media (min-width: 768px) {
      .carousel-nav.prev {
        left: 1rem;
      }
    }

    .carousel-nav.next {
      right: 0.5rem;
    }

    @media (min-width: 768px) {
      .carousel-nav.next {
        right: 1rem;
      }
    }

    .carousel-nav svg {
      width: 20px;
      height: 20px;
    }

    @media (min-width: 768px) {
      .carousel-nav svg {
        width: 24px;
        height: 24px;
      }
    }

    .carousel-indicators {
      display: flex;
      justify-content: center;
      gap: 0.5rem;
      margin-top: 1.5rem;
      padding: 0 1rem;
    }

    @media (min-width: 320px) and (max-width: 767px) {
      .carousel-indicators {
        margin-top: 1rem;
        padding: 0 0.5rem;
      }
    }

    .indicator {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.3);
      border: none;
      cursor: pointer;
      transition: all var(--norm) var(--ease);
    }

    @media (min-width: 768px) {
      .indicator {
        width: 10px;
        height: 10px;
      }
    }

    .indicator.active {
      background: var(--accent-primary);
      width: 24px;
      border-radius: 5px;
    }

    @media (min-width: 768px) {
      .indicator.active {
        width: 30px;
      }
    }

    .tech-badge {
      padding: 0.5rem 1rem;
      background: rgba(88, 101, 242, 0.15);
      color: var(--accent-primary);
      border-radius: var(--radius-full);
      font-size: 0.875rem;
      font-weight: 600;
      border: 1px solid rgba(88, 101, 242, 0.3);
    }

    .section-spacing {
      padding: 4rem 0;
    }

    @media (min-width: 320px) and (max-width: 767px) {
      .section-spacing {
        padding: 2rem 0;
      }
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 1rem;
    }

    @media (min-width: 320px) and (max-width: 767px) {
      .container {
        padding: 0 0.75rem;
      }
    }

    .section-title {
      font-size: clamp(1.5rem, 4vw, 2.5rem);
      font-weight: 700;
      color: var(--color-graphite-dark, #2B2B2B);
      font-family: 'Libre Baskerville', serif; /* Misma fuente que el hero */
      margin-bottom: 1.5rem;
    }
    
    .bg-gradient-dark .section-title,
    .bg-gradient-darker .section-title {
      color: var(--color-graphite-dark, #2B2B2B) !important;
    }

    @media (min-width: 320px) and (max-width: 767px) {
      .section-title {
        font-size: clamp(1.25rem, 5vw, 1.75rem);
        margin-bottom: 1rem;
      }
    }

    .btn-back {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 1rem 2rem;
      background: rgba(255, 255, 255, 0.1);
      color: var(--text-primary);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: var(--radius-md);
      font-weight: 600;
      text-decoration: none;
      transition: all var(--norm) var(--ease);
      font-size: 1.1rem;
    }

    .btn-back:hover {
      background: rgba(255, 255, 255, 0.2);
      transform: translateY(-2px);
    }
  </style>

  <script>
    // PC Carousel - Solo funciona en desktop
    function initCarouselPC() {
      // En m√≥vil, usar scroll nativo, no carousel JavaScript
      if (window.innerWidth <= 767) {
        return;
      }
      
      const track = document.getElementById('carousel-pc');
      const slides = track?.querySelectorAll('.carousel-pc-slide');
      const prevBtn = document.getElementById('carousel-pc-prev');
      const nextBtn = document.getElementById('carousel-pc-next');
      const indicators = document.querySelectorAll('#carousel-pc-indicators .indicator');
      
      if (!track || !slides || slides.length === 0) return;
      
      // Reset transform en caso de que se haya aplicado antes
      track.style.transform = 'translateX(0)';
      
      let currentIndex = 0;
      const totalSlides = slides.length;
      
      function updateCarousel() {
        track.style.transform = `translateX(-${currentIndex * 100}%)`;
        indicators.forEach((indicator, index) => {
          indicator.classList.toggle('active', index === currentIndex);
        });
      }
      
      function nextSlide() {
        currentIndex = (currentIndex + 1) % totalSlides;
        updateCarousel();
      }
      
      function prevSlide() {
        currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
        updateCarousel();
      }
      
      if (nextBtn) nextBtn.addEventListener('click', nextSlide);
      if (prevBtn) prevBtn.addEventListener('click', prevSlide);
      
      indicators.forEach((indicator, index) => {
        indicator.addEventListener('click', () => {
          currentIndex = index;
          updateCarousel();
        });
      });
      
      // Auto-play
      setInterval(nextSlide, 5000);
    }
    
    // Mobile Carousel
    function initCarouselMobile() {
      const track = document.getElementById('carousel-mobile');
      const slides = track?.querySelectorAll('.carousel-mobile-slide');
      const prevBtn = document.getElementById('carousel-mobile-prev');
      const nextBtn = document.getElementById('carousel-mobile-next');
      const indicators = document.querySelectorAll('#carousel-mobile-indicators .indicator');
      
      if (!track || !slides || slides.length === 0) return;
      
      let currentIndex = 0;
      const totalSlides = slides.length;
      
      function updateCarousel() {
        track.style.transform = `translateX(-${currentIndex * 100}%)`;
        indicators.forEach((indicator, index) => {
          indicator.classList.toggle('active', index === currentIndex);
        });
      }
      
      function nextSlide() {
        currentIndex = (currentIndex + 1) % totalSlides;
        updateCarousel();
      }
      
      function prevSlide() {
        currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
        updateCarousel();
      }
      
      if (nextBtn) nextBtn.addEventListener('click', nextSlide);
      if (prevBtn) prevBtn.addEventListener('click', prevSlide);
      
      indicators.forEach((indicator, index) => {
        indicator.addEventListener('click', () => {
          currentIndex = index;
          updateCarousel();
        });
      });
      
      // Auto-play
      setInterval(nextSlide, 5000);
    }
    
    document.addEventListener('DOMContentLoaded', () => {
      initCarouselPC();
      initCarouselMobile();
      
      // Set first indicator as active
      const pcIndicators = document.querySelectorAll('#carousel-pc-indicators .indicator');
      const mobileIndicators = document.querySelectorAll('#carousel-mobile-indicators .indicator');
      if (pcIndicators[0]) pcIndicators[0].classList.add('active');
      if (mobileIndicators[0]) mobileIndicators[0].classList.add('active');
    });
  </script>
</Layout>

