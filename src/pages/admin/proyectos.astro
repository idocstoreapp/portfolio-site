---
import Layout from '../../layouts/AdminLayout.astro';
import AdminGuard from '../../components/admin/AdminGuard';
import AdminSidebar from '../../components/admin/AdminSidebar';
import ProyectosList from '../../components/admin/ProyectosList';

export const prerender = false;
const currentPath = Astro.url.pathname;
---

<Layout 
  title="Proyectos | Panel de Administración"
  description="Gestiona proyectos activos"
>
  <AdminGuard client:load>
    <div style="position: relative; min-height: 100vh; background: #f9fafb;">
      <AdminSidebar client:load currentPath={currentPath} />
      <div style="margin-left: 16rem; min-height: 100vh; width: calc(100% - 16rem);">
        <header className="bg-white shadow-sm border-b border-gray-200">
          <div className="px-6 py-4">
            <h2 className="text-2xl font-bold text-gray-900">
              Sistema de Gestión de Diagnósticos
            </h2>
          </div>
        </header>
        <main className="p-6">
          <div className="mb-6">
            <h1 className="text-3xl font-bold text-gray-900">Proyectos Activos</h1>
            <p className="text-gray-600 mt-2">
              Gestiona proyectos aprobados y registra costos reales
            </p>
          </div>
          <ProyectosList client:load />
        </main>
      </div>
    </div>
  </AdminGuard>
</Layout>


