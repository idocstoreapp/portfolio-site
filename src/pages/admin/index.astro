---
import Layout from '../../layouts/Layout.astro';
import AdminGuard from '../../components/admin/AdminGuard';
import AdminSidebar from '../../components/admin/AdminSidebar';
import AdminDashboard from '../../components/admin/AdminDashboard';

export const prerender = false;
const currentPath = Astro.url.pathname;
---

<Layout 
  title="Dashboard Admin | Panel de Administración"
  description="Panel de administración del sistema de diagnósticos"
>
  <AdminGuard client:load>
    <div className="flex min-h-screen bg-gray-50">
      <AdminSidebar client:load currentPath={currentPath} />
      <div className="flex-1 ml-64">
        <AdminDashboard client:load />
      </div>
    </div>
  </AdminGuard>
</Layout>


